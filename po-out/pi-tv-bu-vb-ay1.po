msgctxt "pi-tv-bu-vb-ay1:23.5"
msgid "saccāhaṃ nipanno, no ca kho methunaṃ dhammaṃ paṭisevin”ti, nipajjāya kāretabbo."
msgstr ""

msgctxt "pi-tv-bu-vb-ay1:23.6"
msgid "Sā ce evaṃ vadeyya—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ay1:23.7"
msgid "ayyo mayā diṭṭho nipanno mātugāmassa methunaṃ dhammaṃ paṭisevanto”ti, so ce evaṃ vadeyya—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ay1:23.8"
msgid "nāhaṃ nipanno, api ca kho nisinno”ti, nisajjāya kāretabbo."
msgstr ""

msgctxt "pi-tv-bu-vb-ay1:23.9"
msgid "Sā ce evaṃ vadeyya—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ay1:23.10"
msgid "ayyo mayā diṭṭho nipanno mātugāmassa methunaṃ dhammaṃ paṭisevanto”ti, so ce evaṃ vadeyya—"
msgstr ""

msgctxt "pi-tv-bu-vb-ay1:23.11"
msgid "“nāhaṃ nipanno, api ca kho ṭhito”ti, na kāretabbo."
msgstr ""

#. </p><p><a class="sc" id="20"></a>
msgctxt "pi-tv-bu-vb-ay1:24.1"
msgid "Sā ce evaṃ vadeyya—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ay1:24.2"
msgid "ayyo mayā diṭṭho nisinno mātugāmena saddhiṃ kāyasaṃsaggaṃ samāpajjanto”ti, so ca taṃ paṭijānāti, āpattiyā kāretabbo …"
msgstr ""

msgctxt "pi-tv-bu-vb-ay1:24.3"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ay1:24.4"
msgid "“saccāhaṃ nisinno no ca kho kāyasaṃsaggaṃ samāpajjin”ti, nisajjāya kāretabbo …"
