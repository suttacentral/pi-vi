msgid "iminā marissatī”ti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:66.3"
msgid "“Tena marissāmī”ti dukkhaṃ vedanaṃ uppādeti, āpatti thullaccayassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:66.4"
msgid "Marati, āpatti pārājikassa."
msgstr ""

#. </p><p><a class="sc" id="63"></a>
msgctxt "pi-tv-bu-vb-pj3:67.1"
msgid "<strong>Bhesajjaṃ</strong> nāma sappiṃ vā navanītaṃ vā telaṃ vā madhuṃ vā phāṇitaṃ vā deti—“"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:67.2"
msgid "imaṃ sāyitvā marissatī”ti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:67.3"
msgid "Taṃ sāyite dukkhā vedanā uppajjati, āpatti thullaccayassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:67.4"
msgid "Marati, āpatti pārājikassa."
msgstr ""

