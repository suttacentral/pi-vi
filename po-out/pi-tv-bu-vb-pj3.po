msgstr ""

#. </p><p><a class="sc" id="69"></a>
msgctxt "pi-tv-bu-vb-pj3:73.1"
msgid "<strong>Dhammūpahāro</strong> nāma nerayikassa nirayakathaṃ katheti—“"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:73.2"
msgid "imaṃ sutvā uttasitvā marissatī”ti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:73.3"
msgid "Taṃ sutvā uttasati, āpatti thullaccayassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:73.4"
msgid "Marati, āpatti pārājikassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:73.5"
msgid "Kalyāṇakammassa saggakathaṃ katheti—“"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:73.6"
msgid "imaṃ sutvā adhimutto marissatī”ti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:73.7"
msgid "Taṃ sutvā adhimutto marissāmīti dukkhaṃ vedanaṃ uppādeti, āpatti thullaccayassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:73.8"
msgid "Marati, āpatti pārājikassa."
msgstr ""

#. </p><p><a class="sc" id="70"></a>
msgctxt "pi-tv-bu-vb-pj3:74.1"
msgid "<strong>Ācikkhanā</strong> nāma puṭṭho bhaṇati—“"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:74.2"
msgid "evaṃ marassu."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:74.3"
msgid "Yo evaṃ marati so dhanaṃ vā labhati yasaṃ vā labhati saggaṃ vā gacchatī”ti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:74.4"
msgid "Tāya ācikkhanāya marissāmīti dukkhaṃ vedanaṃ uppādeti, āpatti thullaccayassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:74.5"
msgid "Marati, āpatti pārājikassa."
msgstr ""

#. </p><p><a class="sc" id="71"></a>
msgctxt "pi-tv-bu-vb-pj3:75.1"
msgid "<strong>Anusāsanī</strong> nāma apuṭṭho bhaṇati—“"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:75.2"
msgid "evaṃ marassu."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:75.3"
msgid "Yo evaṃ marati so dhanaṃ vā labhati yasaṃ vā labhati saggaṃ vā gacchatī”ti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:75.4"
msgid "Tāya anusāsaniyā marissāmīti dukkhaṃ vedanaṃ uppādeti, āpatti thullaccayassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:75.5"
msgid "Marati, āpatti pārājikassa."
msgstr ""

#. </p><p><a class="sc" id="72"></a>
msgctxt "pi-tv-bu-vb-pj3:76.1"
msgid "<strong>Saṅketakammaṃ</strong> nāma saṅketaṃ karoti purebhattaṃ vā pacchābhattaṃ vā rattiṃ vā divā vā—“"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:76.2"
msgid "tena saṅketena taṃ jīvitā voropehī”ti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:76.3"
msgid "Tena saṅketena taṃ jīvitā voropeti, āpatti ubhinnaṃ pārājikassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:76.4"
msgid "Taṃ saṅketaṃ pure vā pacchā vā taṃ jīvitā voropeti, mūlaṭṭhassa anāpatti, vadhakassa āpatti pārājikassa."
msgstr ""

#. </p><p><a class="sc" id="73"></a>
msgctxt "pi-tv-bu-vb-pj3:77.1"
msgid "<strong>Nimittakammaṃ</strong> nāma nimittaṃ karoti—“"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:77.2"
msgid "akkhiṃ vā nikhaṇissāmi bhamukaṃ vā ukkhipissāmi sīsaṃ vā ukkhipissāmi, tena nimittena taṃ jīvitā voropehī”ti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:77.3"
msgid "Tena nimittena taṃ jīvitā voropeti, āpatti ubhinnaṃ pārājikassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:77.4"
msgid "Taṃ nimittaṃ pure vā pacchā vā taṃ jīvitā voropeti, mūlaṭṭhassa anāpatti, vadhakassa āpatti pārājikassa."
msgstr ""

#. </p><p><a class="sc" id="74"></a>
msgctxt "pi-tv-bu-vb-pj3:78.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:78.2"
msgid "asañcicca ajānantassa namaraṇādhippāyassa ummattakassa ādikammikassāti."
msgstr ""

#. </p><p class="endsutta"><a class="sc" id="75"></a>
msgctxt "pi-tv-bu-vb-pj3:79.1"
msgid "Manussaviggahapārājikamhi paṭhamabhāṇavāro niṭṭhito."
msgstr ""

#. </p><h3>
msgctxt "pi-tv-bu-vb-pj3:80.1"
msgid "3.1. Vinītavatthuuddānagāthā"
msgstr ""

#. </h3><blockquote class="gatha"><p><a class="sc" id="76"></a><a
#. class="pts-vp-pi" id="pts-vp-pi3.79"></a>
msgctxt "pi-tv-bu-vb-pj3:81.1"
msgid "Saṃvaṇṇanā nisīdanto,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:81.2"
msgid "musalodukkhalena ca;"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:81.3"
msgid "Vuḍḍhapabbajitābhisanno,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:81.4"
msgid "aggavīmaṃsanāvisaṃ."
msgstr ""

#. </p><p><a class="sc" id="77"></a>
msgctxt "pi-tv-bu-vb-pj3:82.1"
msgid "Tayo ca vatthukammehi,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:82.2"
msgid "iṭṭhakāhipare tayo;"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:82.3"
msgid "Vāsī gopānasī ceva,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:82.4"
msgid "aṭṭakotaraṇaṃ pati."
msgstr ""

#. </p><p><a class="sc" id="78"></a>
msgctxt "pi-tv-bu-vb-pj3:83.1"
msgid "Sedaṃ natthuñca sambāho,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:83.2"
msgid "nhāpanabbhañjanena ca;"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:83.3"
msgid "Uṭṭhāpento nipātento,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:83.4"
msgid "annapānena māraṇaṃ."
msgstr ""

#. </p><p><a class="sc" id="79"></a>
msgctxt "pi-tv-bu-vb-pj3:84.1"
msgid "Jāragabbho sapattī ca,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:84.2"
msgid "mātā puttaṃ ubho vadhi;"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:84.3"
msgid "Ubho na miyyare maddā,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:84.4"
msgid "tāpaṃ vañjhā vijāyinī."
msgstr ""

#. </p><p><a class="sc" id="80"></a>
msgctxt "pi-tv-bu-vb-pj3:85.1"
msgid "Patodaṃ niggahe yakkho,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:85.2"
msgid "vāḷayakkhañca pāhiṇi;"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:85.3"
msgid "Taṃ maññamāno pahari,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:85.4"
msgid "saggañca nirayaṃ bhaṇe."
msgstr ""

#. </p><p><a class="sc" id="81"></a>
msgctxt "pi-tv-bu-vb-pj3:86.1"
msgid "Āḷaviyā tayo rukkhā,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:86.2"
msgid "dāyehi apare tayo;"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:86.3"
msgid "Mā kilamesi na tuyhaṃ,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-pj3:86.4"
msgid "takkaṃ sovīrakena cāti."
msgstr ""

#. </p></blockquote><h3>
msgctxt "pi-tv-bu-vb-pj3:87.1"
msgid "3.2. Vinītavatthu"
msgstr ""

#. </h3><p><a class="sc" id="82"></a>
msgctxt "pi-tv-bu-vb-pj3:88.1"
msgid "Tena kho pana samayena aññataro bhikkhu gilāno hoti."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:88.2"
msgid "Tassa bhikkhū kāruññena maraṇavaṇṇaṃ saṃvaṇṇesuṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:88.3"
msgid "So bhikkhu kālamakāsi."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:88.4"
msgid "Tesaṃ kukkuccaṃ ahosi “bhagavatā sikkhāpadaṃ paññattaṃ, kacci nu kho mayaṃ pārājikaṃ āpattiṃ āpannā”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:88.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:88.6"
msgid "“Āpattiṃ tumhe, bhikkhave, āpannā pārājikan”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:88.7"
msgid "(1)"
msgstr ""

#. </p><p><a class="sc" id="83"></a>
msgctxt "pi-tv-bu-vb-pj3:89.1"
msgid "Tena kho pana samayena aññataro piṇḍacāriko bhikkhu pīṭhake pilotikāya paṭicchannaṃ dārakaṃ nisīdanto ottharitvā māresi."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:89.2"
msgid "Tassa kukkuccaṃ ahosi “bhagavatā sikkhāpadaṃ paññattaṃ, kacci nu kho ahaṃ pārājikaṃ āpattiṃ āpanno”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:89.3"
msgid "Bhagavato etamatthaṃ ārocesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:89.4"
msgid "“Anāpatti, bhikkhu, pārājikassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:89.5"
msgid "Na ca, bhikkhave, appaṭivekkhitvā āsane nisīditabbaṃ;"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:89.6"
msgid "yo nisīdeyya, āpatti dukkaṭassā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:89.7"
msgid "(2)"
msgstr ""

#. </p><p><a class="sc" id="84"></a>
msgctxt "pi-tv-bu-vb-pj3:90.1"
msgid "Tena kho pana samayena aññataro bhikkhu bhattagge antaraghare āsanaṃ paññapento musale ussite ekaṃ musalaṃ aggahesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:90.2"
msgid "Dutiyo musalo paripatitvā aññatarassa dārakassa matthake avatthāsi."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:90.3"
msgid "So kālamakāsi."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:90.4"
msgid "Tassa kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:90.5"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:90.6"
msgid "“kiṃcitto tvaṃ, bhikkhū”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:90.7"
msgid "“Asañcicca ahaṃ, bhagavā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:90.8"
msgid "“Anāpatti, bhikkhu, asañciccā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:90.9"
msgid "(3)"
msgstr ""

#. </p><p><a class="sc" id="85"></a>
msgctxt "pi-tv-bu-vb-pj3:91.1"
msgid "Tena kho pana samayena aññataro bhikkhu bhattagge antaraghare āsanaṃ paññapento udukkhalabhaṇḍikaṃ akkamitvā pavaṭṭesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:91.2"
msgid "Aññataraṃ dārakaṃ ottharitvā māresi."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:91.3"
msgid "Tassa kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:91.4"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:91.5"
msgid "“anāpatti, bhikkhu, asañciccā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:91.6"
msgid "(4)"
msgstr ""

#. </p><p><a class="sc" id="86"></a><a class="pts-vp-pi"
#. id="pts-vp-pi3.80"></a>
msgctxt "pi-tv-bu-vb-pj3:92.1"
msgid "Tena kho pana samayena pitāputtā bhikkhūsu pabbajitā honti."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:92.2"
msgid "Kāle ārocite putto pitaraṃ etadavoca—“"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:92.3"
msgid "gaccha, bhante, saṃgho taṃ patimānetī”ti piṭṭhiyaṃ gahetvā paṇāmesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:92.4"
msgid "So papatitvā kālamakāsi."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:92.5"
msgid "Tassa kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:92.6"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:92.7"
msgid "“kiṃcitto tvaṃ, bhikkhū”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:92.8"
msgid "“Nāhaṃ, bhagavā, maraṇādhippāyo”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:92.9"
msgid "“Anāpatti, bhikkhu, namaraṇādhippāyassā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:92.10"
msgid "(5)"
msgstr ""

