msgctxt "pi-tv-bu-vb-pj3:159.1"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū maraṇādhippāyā dāyaṃ ālimpesuṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:159.2"
msgid "Manussā daḍḍhā kālamakaṃsu …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:159.3"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:159.4"
msgid "manussā daḍḍhā na kālamakaṃsu."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:159.5"
msgid "Tesaṃ kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:159.6"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:159.7"
msgid "“anāpatti, bhikkhave, pārājikassa;"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:159.8"
msgid "āpatti thullaccayassā”ti."
msgstr ""

