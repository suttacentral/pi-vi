msgctxt "pi-tv-bu-vb-pj3:53.1"
msgid "Bhikkhu bhikkhuṃ āṇāpeti—“"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:53.2"
msgid "itthannāmassa pāvada—‘"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:53.3"
msgid "itthannāmo itthannāmassa pāvadatu—"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:53.4"
msgid "itthannāmo itthannāmaṃ jīvitā voropetū’”ti, āpatti dukkaṭassa."
