msgstr ""

msgctxt "pi-tv-bu-vb-pj3:157.2"
msgid "Aññataro bhikkhu maraṇādhippāyo aññataraṃ bhikkhuṃ etadavoca—“"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:157.3"
msgid "āvuso, atraṭṭhito chindāhī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:157.4"
msgid "Taṃ tatraṭṭhitaṃ chindantaṃ rukkho ottharitvā māresi …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:157.5"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:157.6"
msgid "rukkho ottharitvā na māresi."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:157.7"
msgid "Tassa kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:157.8"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:157.9"
msgid "“anāpatti, bhikkhu, pārājikassa;"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:157.10"
msgid "āpatti thullaccayassā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:157.11"
msgid "(95–‍96)"
msgstr ""

#. </p><p><a class="sc" id="152"></a>
#. VAR: ālimpesuṃ → āḷimpesuṃ (mr)
msgctxt "pi-tv-bu-vb-pj3:158.1"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū dāyaṃ ālimpesuṃ;"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:158.2"
msgid "manussā daḍḍhā kālamakaṃsu."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:158.3"
msgid "Tesaṃ kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:158.4"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:158.5"
msgid "“anāpatti, bhikkhave, namaraṇādhippāyassā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:158.6"
msgid "(97)"
msgstr ""

