msgid "Marati, āpatti pārājikassa."
msgstr ""

#. </p><p><a class="sc" id="58"></a>
msgctxt "pi-tv-bu-vb-pj3:62.1"
msgid "<strong>Dūtena saṃvaṇṇeti</strong> nāma dūtassa sāsanaṃ āroceti—“"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:62.2"
msgid "yo evaṃ marati so dhanaṃ vā labhati yasaṃ vā labhati saggaṃ vā gacchatī”ti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:62.3"
msgid "Dūtassa sāsanaṃ sutvā marissāmīti dukkhaṃ vedanaṃ uppādeti, āpatti thullaccayassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:62.4"
msgid "Marati, āpatti pārājikassa."
msgstr ""

#. </p><p><a class="sc" id="59"></a>
msgctxt "pi-tv-bu-vb-pj3:63.1"
msgid "<strong>Lekhāya saṃvaṇṇeti</strong> nāma lekhaṃ chindati—“"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:63.2"
msgid "yo evaṃ marati so dhanaṃ vā labhati yasaṃ vā labhati saggaṃ vā gacchatī”ti, akkharakkharāya āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:63.3"
msgid "Lekhaṃ passitvā marissāmīti dukkhaṃ vedanaṃ uppādeti, āpatti thullaccayassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:63.4"
msgid "Marati, āpatti pārājikassa."
msgstr ""

#. </p><p><a class="sc" id="60"></a>
msgctxt "pi-tv-bu-vb-pj3:64.1"
msgid "<strong>Opātaṃ</strong> nāma manussaṃ uddissa opātaṃ khanati—“"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:64.2"
msgid "papatitvā marissatī”ti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:64.3"
msgid "Papatite dukkhā vedanā uppajjati, āpatti thullaccayassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:64.4"
msgid "Marati, āpatti pārājikassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:64.5"
msgid "Anodissa opātaṃ khanati—“"
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:64.6"
msgid "yo koci papatitvā marissatī”ti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pj3:64.7"
