#. class="hgroup"><p class="division">
msgctxt "pi-tv-bu-vb-ss11:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. </p><p>
msgctxt "pi-tv-bu-vb-ss11:2.1"
msgid "Mahāvibhaṅga"
msgstr ""

#. </p><p>
msgctxt "pi-tv-bu-vb-ss11:3.1"
msgid "Saṃghādisesakaṇḍa"
msgstr ""

#. </p><h1>
msgctxt "pi-tv-bu-vb-ss11:4.1"
msgid "11. Bhedānuvattakasikkhāpada"
msgstr ""

#. </h1></div><p><a class="sc" id="1"></a><a class="pts-vp-pi"
#. id="pts-vp-pi3.175"></a>
msgctxt "pi-tv-bu-vb-ss11:5.1"
msgid "Tena samayena buddho bhagavā rājagahe viharati veḷuvane kalandakanivāpe."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:5.2"
msgid "Tena kho pana samayena devadatto saṃghabhedāya parakkamati cakkabhedāya."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:5.3"
msgid "Bhikkhū evamāhaṃsu—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:5.4"
msgid "adhammavādī devadatto, avinayavādī devadatto."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:5.5"
msgid "Kathañhi nāma devadatto saṃghabhedāya parakkamissati cakkabhedāyā”ti."
msgstr ""

#. VAR: kokāliko → kokāliko ca (bj)
#. VAR: samuddadatto → samuddadatto ca (bj)
msgctxt "pi-tv-bu-vb-ss11:5.6"
msgid "Evaṃ vutte, kokāliko kaṭamodakatissako khaṇḍadeviyā putto samuddadatto te bhikkhū etadavocuṃ—"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:5.7"
msgid "“māyasmanto evaṃ avacuttha."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:5.8"
msgid "Dhammavādī devadatto, vinayavādī devadatto."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:5.9"
msgid "Amhākañca devadatto chandañca ruciñca ādāya voharati jānāti no bhāsati amhākampetaṃ khamatī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:5.10"
msgid "Ye te bhikkhū appicchā …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:5.11"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:5.12"
msgid "te ujjhāyanti khiyyanti vipācenti—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:5.13"
msgid "kathañhi nāma bhikkhū devadattassa saṃghabhedāya parakkamantassa anuvattakā bhavissanti vaggavādakā”ti."
msgstr ""

#. </p><p><a class="sc" id="2"></a>
msgctxt "pi-tv-bu-vb-ss11:6.1"
msgid "Atha kho te bhikkhū te anuvattake bhikkhū anekapariyāyena vigarahitvā bhagavato etamatthaṃ ārocesuṃ …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:6.2"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:6.3"
msgid "“saccaṃ kira, bhikkhave, bhikkhū devadattassa saṃghabhedāya parakkamantassa anuvattakā honti vaggavādakā”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:6.4"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:6.5"
msgid "Vigarahi buddho bhagavā …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:6.6"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:6.7"
msgid "kathañhi nāma te, bhikkhave, moghapurisā devadattassa saṃghabhedāya parakkamantassa anuvattakā bhavissanti vaggavādakā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:6.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:6.9"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:6.10"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. </p><p><a class="sc" id="3"></a>
msgctxt "pi-tv-bu-vb-ss11:7.1"
msgid "<strong class=\"rule\">“Tasseva kho pana bhikkhussa bhikkhū honti anuvattakā vaggavādakā eko vā dve vā tayo vā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:7.2"
msgid "Te evaṃ vadeyyuṃ—‘"
msgstr ""

#. VAR: māyasmanto → mā āyasmanto (bj, s1-3)
msgctxt "pi-tv-bu-vb-ss11:7.3"
msgid "māyasmanto etaṃ bhikkhuṃ kiñci avacuttha."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:7.4"
msgid "Dhammavādī ceso bhikkhu, vinayavādī ceso bhikkhu."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:7.5"
msgid "Amhākañceso bhikkhu chandañca ruciñca ādāya voharati jānāti no bhāsati amhākampetaṃ khamatī’ti, te bhikkhū bhikkhūhi evamassu vacanīyā—‘"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:7.6"
msgid "māyasmanto evaṃ avacuttha, na ceso bhikkhu dhammavādī, na ceso bhikkhu vinayavādī, māyasmantānampi saṃghabhedo ruccittha, sametāyasmantānaṃ saṃghena, samaggo hi saṃgho sammodamāno avivadamāno ekuddeso phāsu viharatī’ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:7.7"
msgid "Evañca te bhikkhū bhikkhūhi vuccamānā tatheva paggaṇheyyuṃ, te bhikkhū bhikkhūhi yāvatatiyaṃ samanubhāsitabbā tassa paṭinissaggāya."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:7.8"
msgid "Yāvatatiyañce samanubhāsiyamānā taṃ paṭinissajjeyyuṃ, iccetaṃ kusalaṃ, no ce paṭinissajjeyyuṃ, saṃghādiseso”</strong>ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:7.9"
msgid "(<em>11</em>:<strong>15</strong>)"
msgstr ""

#. </p><p><a class="sc" id="4"></a>
msgctxt "pi-tv-bu-vb-ss11:8.1"
msgid "<strong>Tasseva kho panā</strong>ti tassa saṃghabhedakassa bhikkhuno."
msgstr ""

#. </p><p><a class="sc" id="5"></a>
msgctxt "pi-tv-bu-vb-ss11:9.1"
msgid "<strong>Bhikkhū hontī</strong>ti aññe bhikkhū honti."
msgstr ""

#. </p><p><a class="sc" id="6"></a>
msgctxt "pi-tv-bu-vb-ss11:10.1"
msgid "<strong>Anuvattakā</strong>ti yaṃdiṭṭhiko so hoti yaṃkhantiko yaṃruciko tepi taṃdiṭṭhikā honti taṃkhantikā taṃrucikā."
msgstr ""

#. </p><p><a class="sc" id="7"></a>
msgctxt "pi-tv-bu-vb-ss11:11.1"
msgid "<strong>Vaggavādakā</strong>ti tassa vaṇṇāya pakkhāya ṭhitā honti."
msgstr ""

#. </p><p><a class="sc" id="8"></a><a class="pts-vp-pi"
#. id="pts-vp-pi3.176"></a>
msgctxt "pi-tv-bu-vb-ss11:12.1"
msgid "<strong>Eko vā dve vā tayo vā</strong>ti eko vā hoti dve vā tayo vā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:12.2"
msgid "Te evaṃ vadeyyuṃ—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:12.3"
msgid "māyasmanto etaṃ bhikkhuṃ kiñci avacuttha, dhammavādī ceso bhikkhu, vinayavādī ceso bhikkhu, amhākañceso bhikkhu chandañca ruciñca ādāya voharati jānāti no bhāsati amhākampetaṃ khamatī”ti."
msgstr ""

#. </p><p><a class="sc" id="9"></a>
msgctxt "pi-tv-bu-vb-ss11:13.1"
msgid "<strong>Te bhikkhū</strong>ti ye te anuvattakā bhikkhū."
msgstr ""

#. </p><p><a class="sc" id="10"></a>
msgctxt "pi-tv-bu-vb-ss11:14.1"
msgid "<strong>Bhikkhūhī</strong>ti aññehi bhikkhūhi."
msgstr ""

#. </p><p><a class="sc" id="11"></a>
msgctxt "pi-tv-bu-vb-ss11:15.1"
msgid "Ye passanti ye suṇanti tehi vattabbā—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.2"
msgid "māyasmanto evaṃ avacuttha."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.3"
msgid "Na ceso bhikkhu dhammavādī, na ceso bhikkhu vinayavādī."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.4"
msgid "Māyasmantānampi saṃghabhedo ruccittha."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.5"
msgid "Sametāyasmantānaṃ saṃghena."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.6"
msgid "Samaggo hi saṃgho sammodamāno avivadamāno ekuddeso phāsu viharatī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.7"
msgid "Dutiyampi vattabbā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.8"
msgid "Tatiyampi vattabbā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.9"
msgid "Sace paṭinissajjanti, iccetaṃ kusalaṃ;"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.10"
msgid "no ce paṭinissajjanti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.11"
msgid "Sutvā na vadanti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.12"
msgid "Te bhikkhū saṃghamajjhampi ākaḍḍhitvā vattabbā—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.13"
msgid "māyasmanto evaṃ avacuttha."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.14"
msgid "Na ceso bhikkhu dhammavādī, na ceso bhikkhu vinayavādī."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.15"
msgid "Māyasmantānampi saṃghabhedo ruccittha."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.16"
msgid "Sametāyasmantānaṃ saṃghena."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.17"
msgid "Samaggo hi saṃgho sammodamāno avivadamāno ekuddeso phāsu viharatī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.18"
msgid "Dutiyampi vattabbā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.19"
msgid "Tatiyampi vattabbā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.20"
msgid "Sace paṭinissajjanti, iccetaṃ kusalaṃ;"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.21"
msgid "no ce paṭinissajjanti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.22"
msgid "Te bhikkhū samanubhāsitabbā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.23"
msgid "“Evañca pana, bhikkhave, samanubhāsitabbā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:15.24"
msgid "Byattena bhikkhunā paṭibalena saṃgho ñāpetabbo—"
msgstr ""

#. </p><p><a class="sc" id="12"></a>
msgctxt "pi-tv-bu-vb-ss11:16.1"
msgid "‘Suṇātu me, bhante, saṃgho."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:16.2"
msgid "Itthannāmo ca itthanāmo ca bhikkhū itthannāmassa bhikkhuno saṃghabhedāya parakkamantassa anuvattakā vaggavādakā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:16.3"
msgid "Te taṃ vatthuṃ na paṭinissajjanti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:16.4"
msgid "Yadi saṃghassa pattakallaṃ, saṃgho itthannāmañca itthannāmañca bhikkhū samanubhāseyya tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:16.5"
msgid "Esā ñatti."
msgstr ""

#. </p><p><a class="sc" id="13"></a>
msgctxt "pi-tv-bu-vb-ss11:17.1"
msgid "Suṇātu me, bhante, saṃgho."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:17.2"
msgid "Itthannāmo ca itthannāmo ca bhikkhū itthannāmassa bhikkhuno saṃghabhedāya parakkamantassa anuvattakā vaggavādakā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:17.3"
msgid "Te taṃ vatthuṃ na paṭinissajjanti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:17.4"
msgid "Saṃgho itthannāmañca itthannāmañca bhikkhū samanubhāsati tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:17.5"
msgid "Yassāyasmato khamati itthannāmassa ca itthannāmassa ca bhikkhūnaṃ samanubhāsanā tassa vatthussa paṭinissaggāya, so tuṇhassa;"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:17.6"
msgid "yassa nakkhamati, so bhāseyya."
msgstr ""

#. </p><p><a class="sc" id="14"></a>
msgctxt "pi-tv-bu-vb-ss11:18.1"
msgid "Dutiyampi etamatthaṃ vadāmi …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:18.2"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:18.3"
msgid "tatiyampi etamatthaṃ vadāmi—"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:18.4"
msgid "suṇātu me, bhante, saṃgho."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:18.5"
msgid "Itthannāmo ca itthannāmo ca bhikkhū itthannāmassa bhikkhuno saṃghabhedāya parakkamantassa anuvattakā vaggavādakā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:18.6"
msgid "Te taṃ vatthuṃ na paṭinissajjanti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:18.7"
msgid "Saṃgho itthannāmañca itthannāmañca bhikkhū samanubhāsati tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:18.8"
msgid "Yassāyasmato khamati itthannāmassa ca itthannāmassa ca bhikkhūnaṃ samanubhāsanā tassa vatthussa paṭinissaggāya, so tuṇhassa;"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:18.9"
msgid "yassa nakkhamati, so bhāseyya."
msgstr ""

#. </p><p><a class="sc" id="15"></a>
msgctxt "pi-tv-bu-vb-ss11:19.1"
msgid "Samanubhaṭṭhā saṃghena itthannāmo ca itthannāmo ca bhikkhū tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:19.2"
msgid "Khamati saṃghassa, tasmā tuṇhī, evametaṃ dhārayāmī’”ti."
msgstr ""

#. </p><p><a class="sc" id="16"></a>
msgctxt "pi-tv-bu-vb-ss11:20.1"
msgid "Ñattiyā dukkaṭaṃ, dvīhi kammavācāhi thullaccayā, kammavācāpariyosāne āpatti saṃghādisesassa."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:20.2"
msgid "Saṃghādisesaṃ ajjhāpajjantānaṃ ñattiyā dukkaṭaṃ, dvīhi kammavācāhi thullaccayā paṭippassambhanti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:20.3"
msgid "Dve tayo ekato samanubhāsitabbā, taduttari na samanubhāsitabbā."
msgstr ""

#. </p><p><a class="sc" id="17"></a>
msgctxt "pi-tv-bu-vb-ss11:21.1"
msgid "<strong>Saṃghādiseso</strong>ti …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:21.2"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:21.3"
msgid "tenapi vuccati “saṃghādiseso”ti."
msgstr ""

#. </p><p><a class="sc" id="18"></a><a class="pts-vp-pi"
#. id="pts-vp-pi3.177"></a>
msgctxt "pi-tv-bu-vb-ss11:22.1"
msgid "Dhammakamme dhammakammasaññī na paṭinissajjanti, āpatti saṃghādisesassa."
msgstr ""

#. </p><p><a class="sc" id="19"></a>
msgctxt "pi-tv-bu-vb-ss11:23.1"
msgid "Dhammakamme vematikā na paṭinissajjanti, āpatti saṃghādisesassa."
msgstr ""

#. </p><p><a class="sc" id="20"></a>
msgctxt "pi-tv-bu-vb-ss11:24.1"
msgid "Dhammakamme adhammakammasaññī na paṭinissajjanti, āpatti saṃghādisesassa."
msgstr ""

#. </p><p><a class="sc" id="21"></a>
msgctxt "pi-tv-bu-vb-ss11:25.1"
msgid "Adhammakamme dhammakammasaññī, āpatti dukkaṭassa."
msgstr ""

#. </p><p><a class="sc" id="22"></a>
msgctxt "pi-tv-bu-vb-ss11:26.1"
msgid "Adhammakamme vematikā, āpatti dukkaṭassa."
msgstr ""

#. </p><p><a class="sc" id="23"></a>
msgctxt "pi-tv-bu-vb-ss11:27.1"
msgid "Adhammakamme adhammakammasaññī, āpatti dukkaṭassa."
msgstr ""

#. </p><p><a class="sc" id="24"></a>
msgctxt "pi-tv-bu-vb-ss11:28.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pi-tv-bu-vb-ss11:28.2"
msgid "asamanubhāsantānaṃ, paṭinissajjantānaṃ, ummattakānaṃ, khittacittānaṃ, vedanāṭṭānaṃ, ādikammikānanti."
msgstr ""

#. </p><p class="endsutta"><a class="sc" id="25"></a>
msgctxt "pi-tv-bu-vb-ss11:29.1"
msgid "Bhedānuvattakasikkhāpadaṃ niṭṭhitaṃ ekādasamaṃ."
msgstr ""

