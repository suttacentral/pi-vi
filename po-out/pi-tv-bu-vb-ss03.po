msgctxt "pi-tv-bu-vb-ss3:38.1"
msgid "Itthī ca paṇḍako ca ubhinnaṃ itthisaññī sāratto ca."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:38.2"
msgid "Bhikkhu ca naṃ ubhinnaṃ kāyapaṭibaddhaṃ ādissa vaṇṇampi bhaṇati avaṇṇampi bhaṇati …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:38.3"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:38.4"
msgid "akkosatipi, āpatti dvinnaṃ dukkaṭānaṃ …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:38.5"
msgid "pe …."
msgstr ""

#. </p><p><a class="sc" id="35"></a>
msgctxt "pi-tv-bu-vb-ss3:39.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:39.2"
msgid "atthapurekkhārassa, dhammapurekkhārassa, anusāsanipurekkhārassa, ummattakassa, ādikammikassāti."
msgstr ""

#. </p><h3>
msgctxt "pi-tv-bu-vb-ss3:40.1"
msgid "3.1. Vinītavatthuuddānagāthā"
msgstr ""

#. </h3><blockquote class="gatha"><p><a class="sc" id="36"></a>
msgctxt "pi-tv-bu-vb-ss3:41.1"
msgid "Lohitaṃ kakkasākiṇṇaṃ,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-ss3:41.2"
msgid "kharaṃ dīghañca vāpitaṃ;"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-ss3:41.3"
msgid "Kacci saṃsīdati maggo,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-ss3:41.4"
msgid "saddhā dānena kammunāti."
msgstr ""

#. </p></blockquote><h3>
msgctxt "pi-tv-bu-vb-ss3:42.1"
msgid "3.2. Vinītavatthu"
msgstr ""

#. </h3><p><a class="sc" id="37"></a>
msgctxt "pi-tv-bu-vb-ss3:43.1"
msgid "Tena kho pana samayena aññatarā itthī navarattaṃ kambalaṃ pārutā hoti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:43.2"
msgid "Aññataro bhikkhu sāratto taṃ itthiṃ etadavoca—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:43.3"
msgid "lohitaṃ kho te, bhaginī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:43.4"
msgid "Sā na paṭivijāni."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:43.5"
msgid "“Āmāyya, navaratto kambalo”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:43.6"
msgid "Tassa kukkuccaṃ ahosi “bhagavatā sikkhāpadaṃ paññattaṃ, kacci nu kho ahaṃ saṃghādisesaṃ āpattiṃ āpanno”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:43.7"
msgid "Bhagavato etamatthaṃ ārocesi."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:43.8"
msgid "“Anāpatti, bhikkhu, saṃghādisesassa;"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:43.9"
msgid "āpatti dukkaṭassā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:43.10"
msgid "(1)"
msgstr ""

#. </p><p><a class="sc" id="38"></a>
msgctxt "pi-tv-bu-vb-ss3:44.1"
msgid "Tena kho pana samayena aññatarā itthī kharakambalaṃ pārutā hoti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:44.2"
msgid "Aññataro bhikkhu sāratto taṃ itthiṃ etadavoca—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:44.3"
msgid "kakkasalomaṃ kho te, bhaginī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:44.4"
msgid "Sā na paṭivijāni."
msgstr ""

#. VAR: kharakambalo → kharakambalako (bj, c1) | kakkasakambalo (s1-3)
msgctxt "pi-tv-bu-vb-ss3:44.5"
msgid "“Āmāyya, kharakambalo”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:44.6"
msgid "Tassa kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:44.7"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:44.8"
msgid "“anāpatti, bhikkhu, saṃghādisesassa;"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:44.9"
msgid "āpatti dukkaṭassā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:44.10"
msgid "(2)"
msgstr ""

#. </p><p><a class="sc" id="39"></a>
msgctxt "pi-tv-bu-vb-ss3:45.1"
msgid "Tena kho pana samayena aññatarā itthī navāvutaṃ kambalaṃ pārutā hoti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:45.2"
msgid "Aññataro bhikkhu sāratto taṃ itthiṃ etadavoca—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:45.3"
msgid "ākiṇṇalomaṃ kho te, bhaginī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:45.4"
msgid "Sā na paṭivijāni."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:45.5"
msgid "“Āmāyya, navāvuto kambalo”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:45.6"
msgid "Tassa kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:45.7"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:45.8"
msgid "“anāpatti, bhikkhu, saṃghādisesassa;"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:45.9"
msgid "āpatti dukkaṭassā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:45.10"
msgid "(3)"
msgstr ""

#. </p><p><a class="sc" id="40"></a>
msgctxt "pi-tv-bu-vb-ss3:46.1"
msgid "Tena kho pana samayena aññatarā itthī kharakambalakaṃ pārutā hoti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:46.2"
msgid "Aññataro bhikkhu sāratto taṃ itthiṃ etadavoca—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:46.3"
msgid "kharalomaṃ kho te, bhaginī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:46.4"
msgid "Sā na paṭivijāni."
msgstr ""

#. VAR: kharakambalako → kharakambalo (s1-3)
msgctxt "pi-tv-bu-vb-ss3:46.5"
msgid "“Āmāyya, kharakambalako”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:46.6"
msgid "Tassa kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:46.7"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:46.8"
msgid "“anāpatti, bhikkhu, saṃghādisesassa;"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:46.9"
msgid "āpatti dukkaṭassā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:46.10"
msgid "(4)"
msgstr ""

#. </p><p><a class="sc" id="41"></a>
#. VAR: itthī pāvāraṃ → dīghapāvāraṃ (s1-3)
msgctxt "pi-tv-bu-vb-ss3:47.1"
msgid "Tena kho pana samayena aññatarā itthī pāvāraṃ pārutā hoti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:47.2"
msgid "Aññataro bhikkhu sāratto taṃ itthiṃ etadavoca—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:47.3"
msgid "dīghalomaṃ kho te, bhaginī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:47.4"
msgid "Sā na paṭivijāni."
msgstr ""

#. VAR: Āmāyya, pāvāro → dīghapāvāro (s1-3)
msgctxt "pi-tv-bu-vb-ss3:47.5"
msgid "“Āmāyya, pāvāro”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:47.6"
msgid "Tassa kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:47.7"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:47.8"
msgid "“anāpatti, bhikkhu, saṃghādisesassa;"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:47.9"
msgid "āpatti dukkaṭassā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:47.10"
msgid "(5)"
msgstr ""

#. </p><p><a class="sc" id="42"></a><a class="pts-vp-pi"
#. id="pts-vp-pi3.131"></a>
msgctxt "pi-tv-bu-vb-ss3:48.1"
msgid "Tena kho pana samayena aññatarā itthī khettaṃ vapāpetvā āgacchati."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:48.2"
msgid "Aññataro bhikkhu sāratto taṃ itthiṃ etadavoca—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:48.3"
msgid "vāpitaṃ kho te, bhaginī”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:48.4"
msgid "Sā na paṭivijāni."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:48.5"
msgid "“Āmāyya, no ca kho paṭivuttan”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:48.6"
msgid "Tassa kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:48.7"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:48.8"
msgid "“anāpatti, bhikkhu, saṃghādisesassa;"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:48.9"
msgid "āpatti dukkaṭassā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:48.10"
msgid "(6)"
msgstr ""

#. </p><p><a class="sc" id="43"></a>
msgctxt "pi-tv-bu-vb-ss3:49.1"
msgid "Tena kho pana samayena aññataro bhikkhu paribbājikaṃ paṭipathe passitvā sāratto taṃ paribbājikaṃ etadavoca—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:49.2"
msgid "kacci, bhagini, maggo saṃsīdatī”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:49.3"
msgid "Sā na paṭivijāni."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:49.4"
msgid "“Āma, bhikkhu, paṭipajjissasī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:49.5"
msgid "Tassa kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:49.6"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:49.7"
msgid "“anāpatti, bhikkhu, saṃghādisesassa;"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:49.8"
msgid "āpatti thullaccayassā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:49.9"
msgid "(7)"
msgstr ""

#. </p><p><a class="sc" id="44"></a>
msgctxt "pi-tv-bu-vb-ss3:50.1"
msgid "Tena kho pana samayena aññataro bhikkhu sāratto aññataraṃ itthiṃ etadavoca—"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:50.2"
msgid "“saddhāsi tvaṃ, bhagini."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:50.3"
msgid "Api ca yaṃ sāmikassa desi taṃ nāmhākaṃ desī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:50.4"
msgid "“Kiṃ, bhante”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:50.5"
msgid "“Methunadhamman”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:50.6"
msgid "Tassa kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:50.7"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:50.8"
msgid "“āpattiṃ tvaṃ, bhikkhu, āpanno saṃghādisesan”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:50.9"
msgid "(8)"
msgstr ""

#. </p><p><a class="sc" id="45"></a>
msgctxt "pi-tv-bu-vb-ss3:51.1"
msgid "Tena kho pana samayena aññataro bhikkhu sāratto aññataraṃ itthiṃ etadavoca—"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:51.2"
msgid "“saddhāsi tvaṃ, bhagini."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:51.3"
msgid "Api ca yaṃ aggadānaṃ taṃ nāmhākaṃ desī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:51.4"
msgid "“Kiṃ, bhante, aggadānan”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:51.5"
msgid "“Methunadhamman”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:51.6"
msgid "Tassa kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:51.7"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:51.8"
msgid "“āpattiṃ tvaṃ, bhikkhu, āpanno saṃghādisesan”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:51.9"
msgid "(9)"
msgstr ""

#. </p><p><a class="sc" id="46"></a>
msgctxt "pi-tv-bu-vb-ss3:52.1"
msgid "Tena kho pana samayena aññatarā itthī kammaṃ karoti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:52.2"
msgid "Aññataro bhikkhu sāratto taṃ itthiṃ etadavoca—“"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:52.3"
msgid "tiṭṭha, bhagini, ahaṃ karissāmī”ti …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:52.4"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:52.5"
msgid "nisīda, bhagini, ahaṃ karissāmī”ti …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:52.6"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:52.7"
msgid "nipajja, bhagini, ahaṃ karissāmī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:52.8"
msgid "Sā na paṭivijāni."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:52.9"
msgid "Tassa kukkuccaṃ ahosi …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:52.10"
msgid "pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:52.11"
msgid "“anāpatti, bhikkhu, saṃghādisesassa;"
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:52.12"
msgid "āpatti dukkaṭassā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss3:52.13"
msgid "(10–‍12)"
msgstr ""

