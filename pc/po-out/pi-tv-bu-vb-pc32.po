msgid "Tena kho pana samayena manussā cīvarakārake bhikkhū bhattena nimantenti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:16.2"
msgid "Bhikkhū kukkuccāyantā nādhivāsenti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:16.3"
msgid "“paṭikkhittaṃ bhagavatā gaṇabhojanan”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:16.4"
msgid "Bhagavato etamatthaṃ ārocesuṃ … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:16.6"
msgid "anujānāmi, bhikkhave, cīvarakārasamaye gaṇabhojanaṃ bhuñjituṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:16.7"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. </p><p><a class="sc" id="12"></a>
msgctxt "pi-tv-bu-vb-pc32:17.1"
msgid "<strong class=\"rule\">“Gaṇabhojane, aññatra samayā, pācittiyaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:17.2"
msgid "Tatthāyaṃ samayo."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:17.3"
msgid "Gilānasamayo, cīvaradānasamayo, cīvarakārasamayo—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:17.4"
msgid "ayaṃ tattha samayo”</strong>ti."
msgstr ""

#. </p><p><a class="sc" id="13"></a>
msgctxt "pi-tv-bu-vb-pc32:18.1"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. </p><p><a class="sc" id="14"></a><a class="pts-vp-pi" id="pts-vp-pi4.73"></a>
msgctxt "pi-tv-bu-vb-pc32:19.1"
msgid "Tena kho pana samayena bhikkhū manussehi saddhiṃ addhānaṃ gacchanti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:19.2"
msgid "Atha kho te bhikkhū te manusse etadavocuṃ—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:19.3"
msgid "“muhuttaṃ, āvuso, āgametha;"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:19.4"
msgid "piṇḍāya carissāmā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:19.5"
msgid "Te evamāhaṃsu—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:19.6"
msgid "“idheva, bhante, bhuñjathā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:19.7"
msgid "Bhikkhū kukkuccāyantā na paṭiggaṇhanti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:19.8"
msgid "“paṭikkhittaṃ bhagavatā gaṇabhojanan”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:19.9"
msgid "Bhagavato etamatthaṃ ārocesuṃ … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:19.11"
msgid "anujānāmi, bhikkhave, addhānagamanasamaye gaṇabhojanaṃ bhuñjituṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:19.12"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. </p><p><a class="sc" id="15"></a>
msgctxt "pi-tv-bu-vb-pc32:20.1"
msgid "<strong class=\"rule\">“Gaṇabhojane, aññatra samayā, pācittiyaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:20.2"
msgid "Tatthāyaṃ samayo."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:20.3"
msgid "Gilānasamayo, cīvaradānasamayo, cīvarakārasamayo, addhānagamanasamayo—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:20.4"
msgid "ayaṃ tattha samayo”</strong>ti."
msgstr ""

#. </p><p><a class="sc" id="16"></a>
msgctxt "pi-tv-bu-vb-pc32:21.1"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. </p><p><a class="sc" id="17"></a>
msgctxt "pi-tv-bu-vb-pc32:22.1"
msgid "Tena kho pana samayena bhikkhū manussehi saddhiṃ nāvāya gacchanti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:22.2"
msgid "Atha kho te bhikkhū te manusse etadavocuṃ—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:22.3"
msgid "“muhuttaṃ, āvuso, tīraṃ upanetha;"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:22.4"
msgid "piṇḍāya carissāmā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:22.5"
msgid "Te evamāhaṃsu—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:22.6"
msgid "“idheva, bhante, bhuñjathā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:22.7"
msgid "Bhikkhū kukkuccāyantā na paṭiggaṇhanti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:22.8"
msgid "“paṭikkhittaṃ bhagavatā gaṇabhojanan”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:22.9"
msgid "Bhagavato etamatthaṃ ārocesuṃ … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:22.11"
msgid "anujānāmi, bhikkhave, nāvābhiruhanasamaye gaṇabhojanaṃ bhuñjituṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:22.12"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. </p><p><a class="sc" id="18"></a>
msgctxt "pi-tv-bu-vb-pc32:23.1"
msgid "<strong class=\"rule\">“Gaṇabhojane, aññatra samayā, pācittiyaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:23.2"
msgid "Tatthāyaṃ samayo."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:23.3"
msgid "Gilānasamayo, cīvaradānasamayo, cīvarakārasamayo, addhānagamanasamayo, nāvābhiruhanasamayo—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:23.4"
msgid "ayaṃ tattha samayo”</strong>ti."
msgstr ""

#. </p><p><a class="sc" id="19"></a>
msgctxt "pi-tv-bu-vb-pc32:24.1"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. </p><p><a class="sc" id="20"></a>
msgctxt "pi-tv-bu-vb-pc32:25.1"
msgid "Tena kho pana samayena disāsu vassaṃvuṭṭhā bhikkhū rājagahaṃ āgacchanti bhagavantaṃ dassanāya."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:25.2"
msgid "Manussā nānāverajjake bhikkhū passitvā bhattena nimantenti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:25.3"
msgid "Bhikkhū kukkuccāyantā nādhivāsenti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:25.4"
msgid "“paṭikkhittaṃ bhagavatā gaṇabhojanan”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:25.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:25.7"
msgid "anujānāmi, bhikkhave, mahāsamaye gaṇabhojanaṃ bhuñjituṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:25.8"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. </p><p><a class="sc" id="21"></a>
msgctxt "pi-tv-bu-vb-pc32:26.1"
msgid "<strong class=\"rule\">“Gaṇabhojane, aññatra samayā, pācittiyaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:26.2"
msgid "Tatthāyaṃ samayo."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:26.3"
msgid "Gilānasamayo, cīvaradānasamayo, cīvarakārasamayo, addhānagamanasamayo, nāvābhiruhanasamayo, mahāsamayo—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:26.4"
msgid "ayaṃ tattha samayo”</strong>ti."
msgstr ""

#. </p><p><a class="sc" id="22"></a>
msgctxt "pi-tv-bu-vb-pc32:27.1"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. </p><p><a class="sc" id="23"></a><a class="pts-vp-pi" id="pts-vp-pi4.74"></a>
msgctxt "pi-tv-bu-vb-pc32:28.1"
msgid "Tena kho pana samayena rañño māgadhassa seniyassa bimbisārassa ñātisālohito ājīvakesu pabbajito hoti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.2"
msgid "Atha kho so ājīvako yena rājā māgadho seniyo bimbisāro tenupasaṅkami;"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.3"
msgid "upasaṅkamitvā rājānaṃ māgadhaṃ seniyaṃ bimbisāraṃ etadavoca—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.4"
msgid "“icchāmahaṃ, mahārāja, sabbapāsaṇḍikabhattaṃ kātun”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.5"
msgid "“Sace tvaṃ, bhante, buddhappamukhaṃ bhikkhusaṃghaṃ paṭhamaṃ bhojeyyāsi”."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.6"
msgid "“Evaṃ kareyyāmī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.7"
msgid "Atha kho so ājīvako bhikkhūnaṃ santike dūtaṃ pāhesi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.8"
msgid "“adhivāsentu me bhikkhū svātanāya bhattan”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.9"
msgid "Bhikkhū kukkuccāyantā nādhivāsenti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.10"
msgid "“paṭikkhittaṃ bhagavatā gaṇabhojanan”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.11"
msgid "Atha kho so ājīvako yena bhagavā tenupasaṅkami;"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.12"
msgid "upasaṅkamitvā bhagavatā saddhiṃ sammodi, sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.13"
msgid "Ekamantaṃ ṭhito kho so ājīvako bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.14"
msgid "“bhavampi gotamo pabbajito, ahampi pabbajito;"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.15"
msgid "arahati pabbajito pabbajitassa piṇḍaṃ paṭiggahetuṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.16"
msgid "Adhivāsetu me bhavaṃ gotamo svātanāya bhattaṃ saddhiṃ bhikkhusaṃghenā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.17"
msgid "Adhivāsesi bhagavā tuṇhībhāvena."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.18"
msgid "Atha kho so ājīvako bhagavato adhivāsanaṃ viditvā pakkāmi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.19"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.20"
msgid "“anujānāmi, bhikkhave, samaṇabhattasamaye gaṇabhojanaṃ bhuñjituṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:28.21"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. </p><p><a class="sc" id="24"></a>
msgctxt "pi-tv-bu-vb-pc32:29.1"
msgid "<strong>Gaṇabhojane, aññatra samayā, pācittiyaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:29.2"
msgid "Tatthāyaṃ samayo."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:29.3"
msgid "Gilānasamayo, cīvaradānasamayo, cīvarakārasamayo, addhānagamanasamayo, nāvābhiruhanasamayo, mahāsamayo, samaṇabhattasamayo—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:29.4"
msgid "ayaṃ tattha samayo”</strong>ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:29.5"
msgid "(<em>32</em>:<strong>81</strong>)"
msgstr ""

#. </p><p><a class="sc" id="25"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc32:30.1"
msgid "Gaṇabhojanaṃ nāma"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc32:30.1"
msgid "yattha cattāro bhikkhū pañcannaṃ bhojanānaṃ aññatarena bhojanena nimantitā bhuñjanti."
msgstr ""

#. </span>
msgctxt "pi-tv-bu-vb-pc32:30.2"
msgid "Etaṃ gaṇabhojanaṃ nāma."
msgstr ""

#. </p><p><a class="sc" id="26"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc32:31.1"
msgid "Aññatra samayāti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc32:31.1"
msgid "ṭhapetvā samayaṃ."
msgstr ""

#. </span>

#. </p><p><a class="sc" id="27"></a> <span class="var" hidden>phalitā → phālitā (bj, s1-3, pts1, mr)</span>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc32:32.1"
msgid "Gilānasamayo nāma"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc32:32.1"
msgid "antamaso pādāpi phalitā honti."
msgstr ""

#. </span>
msgctxt "pi-tv-bu-vb-pc32:32.2"
msgid "“Gilānasamayo”ti bhuñjitabbaṃ."
msgstr ""

#. </p><p><a class="sc" id="28"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc32:33.1"
msgid "Cīvaradānasamayo nāma"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc32:33.1"
msgid "anatthate kathine vassānassa pacchimo māso, atthate kathine pañcamāsā."
msgstr ""

#. </span>
msgctxt "pi-tv-bu-vb-pc32:33.2"
msgid "“Cīvaradānasamayo”ti bhuñjitabbaṃ."
msgstr ""

#. </p><p><a class="sc" id="29"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc32:34.1"
msgid "Cīvarakārasamayo nāma"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc32:34.1"
msgid "cīvare kayiramāne."
msgstr ""

#. </span>
msgctxt "pi-tv-bu-vb-pc32:34.2"
msgid "“Cīvarakārasamayo”ti bhuñjitabbaṃ."
msgstr ""

#. </p><p><a class="sc" id="30"></a><a class="pts-vp-pi" id="pts-vp-pi4.75"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc32:35.1"
msgid "Addhānagamanasamayo nāma"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc32:35.1"
msgid "“addhayojanaṃ gacchissāmī”ti bhuñjitabbaṃ, gacchantena bhuñjitabbaṃ, gatena bhuñjitabbaṃ."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="31"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc32:36.1"
msgid "Nāvābhiruhanasamayo nāma"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc32:36.1"
msgid "“nāvaṃ abhiruhissāmī”ti bhuñjitabbaṃ, āruḷhena bhuñjitabbaṃ, oruḷhena bhuñjitabbaṃ."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="32"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc32:37.1"
msgid "Mahāsamayo nāma"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc32:37.1"
msgid "yattha dve tayo bhikkhū piṇḍāya caritvā yāpenti, catutthe āgate na yāpenti."
msgstr ""

#. </span>
msgctxt "pi-tv-bu-vb-pc32:37.2"
msgid "“Mahāsamayo”ti bhuñjitabbaṃ."
msgstr ""

#. </p><p><a class="sc" id="33"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc32:38.1"
msgid "Samaṇabhattasamayo nāma"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc32:38.1"
msgid "yo koci paribbājakasamāpanno bhattaṃ karoti."
msgstr ""

#. </span>
msgctxt "pi-tv-bu-vb-pc32:38.2"
msgid "“Samaṇabhattasamayo”ti bhuñjitabbaṃ."
msgstr ""

#. </p><p><a class="sc" id="34"></a>
msgctxt "pi-tv-bu-vb-pc32:39.1"
msgid "“Aññatra samayā bhuñjissāmī”ti paṭiggaṇhāti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:39.2"
msgid "Ajjhohāre ajjhohāre āpatti pācittiyassa."
msgstr ""

#. </p><p><a class="sc" id="35"></a>
msgctxt "pi-tv-bu-vb-pc32:40.1"
msgid "Gaṇabhojane gaṇabhojanasaññī, aññatra samayā, bhuñjati, āpatti pācittiyassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:40.2"
msgid "Gaṇabhojane vematiko, aññatra samayā, bhuñjati, āpatti pācittiyassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:40.3"
msgid "Gaṇabhojane nagaṇabhojanasaññī, aññatra samayā, bhuñjati, āpatti pācittiyassa."
msgstr ""

#. </p><p><a class="sc" id="36"></a>
msgctxt "pi-tv-bu-vb-pc32:41.1"
msgid "Nagaṇabhojane gaṇabhojanasaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:41.2"
msgid "Nagaṇabhojane vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:41.3"
msgid "Nagaṇabhojane nagaṇabhojanasaññī, anāpatti."
msgstr ""

#. </p><p><a class="sc" id="37"></a>
msgctxt "pi-tv-bu-vb-pc32:42.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:42.2"
msgid "samaye, dve tayo ekato bhuñjanti, piṇḍāya caritvā ekato sannipatitvā bhuñjanti, niccabhattaṃ, salākabhattaṃ, pakkhikaṃ, uposathikaṃ, pāṭipadikaṃ, pañca bhojanāni ṭhapetvā sabbattha anāpatti, ummattakassa, ādikammikassāti."
msgstr ""

#. </p><p class="endsutta"><a class="sc" id="38"></a>
msgctxt "pi-tv-bu-vb-pc32:43.1"
msgid "Gaṇabhojanasikkhāpadaṃ niṭṭhitaṃ dutiyaṃ."
msgstr ""

