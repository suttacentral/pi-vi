msgctxt "pi-tv-bu-vb-pc32:5.1"
msgid "32. Gaṇabhojanasikkhāpada"
msgstr ""

#. </h1></div><p><a class="sc" id="1"></a>
msgctxt "pi-tv-bu-vb-pc32:6.1"
msgid "Tena samayena buddho bhagavā rājagahe viharati veḷuvane kalandakanivāpe."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:6.2"
msgid "Tena kho pana samayena devadatto parihīnalābhasakkāro sapariso kulesu viññāpetvā viññāpetvā bhuñjati."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:6.3"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:6.4"
msgid "“kathañhi nāma samaṇā sakyaputtiyā kulesu viññāpetvā viññāpetvā bhuñjissanti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:6.5"
msgid "Kassa sampannaṃ na manāpaṃ, kassa sāduṃ na ruccatī”ti."
msgstr ""

#. </p><p><a class="sc" id="2"></a>
msgctxt "pi-tv-bu-vb-pc32:7.1"
msgid "Assosuṃ kho bhikkhū tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:7.2"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:7.4"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:7.5"
msgid "“kathañhi nāma devadatto sapariso kulesu viññāpetvā viññāpetvā bhuñjissatī”ti … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:7.7"
msgid "“saccaṃ kira tvaṃ, devadatta, sapariso kulesu viññāpetvā viññāpetvā bhuñjasī”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:7.8"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:7.9"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:7.11"
msgid "kathañhi nāma tvaṃ, moghapurisa, sapariso kulesu viññāpetvā viññāpetvā bhuñjissasi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:7.12"
msgid "Netaṃ, moghapurisa, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:7.14"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. </p><p><a class="sc" id="3"></a>
#. <strong class="rule">
msgctxt "pi-tv-bu-vb-pc32:8.1"
msgid "“Gaṇabhojane pācittiyan”ti."
msgstr ""

#. </strong>
#. </p><p><a class="sc" id="4"></a>
msgctxt "pi-tv-bu-vb-pc32:9.1"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. </p><p><a class="sc" id="5"></a><a class="pts-vp-pi" id="pts-vp-pi4.72"></a>
msgctxt "pi-tv-bu-vb-pc32:10.1"
msgid "Tena kho pana samayena manussā gilāne bhikkhū bhattena nimantenti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:10.2"
msgid "Bhikkhū kukkuccāyantā nādhivāsenti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:10.3"
msgid "“paṭikkhittaṃ bhagavatā gaṇabhojanan”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:10.4"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:10.5"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:10.6"
msgid "“anujānāmi, bhikkhave, gilānena bhikkhunā gaṇabhojanaṃ bhuñjituṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:10.7"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. </p><p><a class="sc" id="6"></a>
msgctxt "pi-tv-bu-vb-pc32:11.1"
msgid "<strong class=\"rule\">“Gaṇabhojane, aññatra samayā, pācittiyaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:11.2"
msgid "Tatthāyaṃ samayo."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:11.3"
msgid "Gilānasamayo—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:11.4"
msgid "ayaṃ tattha samayo”</strong>ti."
msgstr ""

#. </p><p><a class="sc" id="7"></a>
msgctxt "pi-tv-bu-vb-pc32:12.1"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. </p><p><a class="sc" id="8"></a>
msgctxt "pi-tv-bu-vb-pc32:13.1"
msgid "Tena kho pana samayena manussā cīvaradānasamaye sacīvarabhattaṃ paṭiyādetvā bhikkhū nimantenti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:13.2"
msgid "“bhojetvā cīvarena acchādessāmā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:13.3"
msgid "Bhikkhū kukkuccāyantā nādhivāsenti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:13.4"
msgid "“paṭikkhittaṃ bhagavatā gaṇabhojanan”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:13.5"
msgid "Cīvaraṃ parittaṃ uppajjati."
msgstr ""

#. <span class="var" hidden>Bhagavato → bhikkhū bhagavato (c1)</span>
msgctxt "pi-tv-bu-vb-pc32:13.6"
msgid "Bhagavato etamatthaṃ ārocesuṃ … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:13.8"
msgid "anujānāmi, bhikkhave, cīvaradānasamaye gaṇabhojanaṃ bhuñjituṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:13.9"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. </p><p><a class="sc" id="9"></a>
msgctxt "pi-tv-bu-vb-pc32:14.1"
msgid "<strong class=\"rule\">“Gaṇabhojane, aññatra samayā, pācittiyaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:14.2"
msgid "Tatthāyaṃ samayo."
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:14.3"
msgid "Gilānasamayo, cīvaradānasamayo—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc32:14.4"
msgid "ayaṃ tattha samayo”</strong>ti."
msgstr ""

#. </p><p><a class="sc" id="10"></a>
msgctxt "pi-tv-bu-vb-pc32:15.1"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. </p><p><a class="sc" id="11"></a>
