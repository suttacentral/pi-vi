msgctxt "pi-tv-bu-vb-pc83:5.1"
msgid "83. Antepurasikkhāpada"
msgstr ""

#. </h1></div><p><a class="sc" id="1"></a>
msgctxt "pi-tv-bu-vb-pc83:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:6.2"
msgid "Tena kho pana samayena rājā pasenadi kosalo uyyānapālaṃ āṇāpesi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:6.3"
msgid "“gaccha, bhaṇe, uyyānaṃ sodhehi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:6.4"
msgid "Uyyānaṃ gamissāmā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:6.5"
msgid "“Evaṃ, devā”ti kho so uyyānapālo rañño pasenadissa kosalassa paṭissutvā uyyānaṃ sodhento addasa bhagavantaṃ aññatarasmiṃ rukkhamūle nisinnaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:6.6"
msgid "Disvāna yena rājā pasenadi kosalo tenupasaṅkami;"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:6.7"
msgid "upasaṅkamitvā rājānaṃ pasenadiṃ kosalaṃ etadavoca—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:6.8"
msgid "“suddhaṃ, deva, uyyānaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:6.9"
msgid "Api ca bhagavā tattha nisinno”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:6.10"
msgid "“Hotu, bhaṇe."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:6.11"
msgid "Mayaṃ bhagavantaṃ payirupāsissāmā”ti."
msgstr ""

#. </p><p><a class="sc" id="2"></a><a class="pts-vp-pi" id="pts-vp-pi4.158"></a>
msgctxt "pi-tv-bu-vb-pc83:7.1"
msgid "Atha kho rājā pasenadi kosalo uyyānaṃ gantvā yena bhagavā tenupasaṅkami."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.2"
msgid "Tena kho pana samayena aññataro upāsako bhagavantaṃ payirupāsanto nisinno hoti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.3"
msgid "Addasā kho rājā pasenadi kosalo taṃ upāsakaṃ bhagavantaṃ payirupāsantaṃ nisinnaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.4"
msgid "Disvāna bhīto aṭṭhāsi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.5"
msgid "Atha kho rañño pasenadissa kosalassa etadahosi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.6"
msgid "“nārahatāyaṃ puriso pāpo hotuṃ, yathā bhagavantaṃ payirupāsatī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.7"
msgid "Yena bhagavā tenupasaṅkami;"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.8"
msgid "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.9"
msgid "Atha kho so upāsako bhagavato gāravena rājānaṃ pasenadiṃ kosalaṃ neva abhivādesi na paccuṭṭhāsi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.10"
msgid "Atha kho rājā pasenadi kosalo anattamano ahosi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.11"
msgid "“kathañhi nāmāyaṃ puriso mayi āgate neva abhivādessati na paccuṭṭhessatī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.12"
msgid "Atha kho bhagavā rājānaṃ pasenadiṃ kosalaṃ anattamanaṃ viditvā rājānaṃ pasenadiṃ kosalaṃ etadavoca—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.13"
msgid "“eso kho, mahārāja, upāsako bahussuto āgatāgamo kāmesu vītarāgo”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.14"
msgid "Atha kho rañño pasenadissa kosalassa etadahosi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.15"
msgid "“nārahatāyaṃ upāsako orako hotuṃ, bhagavāpi imassa vaṇṇaṃ bhāsatī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.16"
msgid "Taṃ upāsakaṃ etadavoca—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.17"
msgid "“vadeyyāsi, upāsaka, yena attho”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.18"
msgid "“Suṭṭhu, devā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.19"
msgid "Atha kho bhagavā rājānaṃ pasenadiṃ kosalaṃ dhammiyā kathāya sandassesi samādapesi samuttejesi sampahaṃsesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:7.20"
msgid "Atha kho rājā pasenadi kosalo bhagavatā dhammiyā kathāya sandassito samādapito samuttejito sampahaṃsito uṭṭhāyāsanā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

#. </p><p><a class="sc" id="3"></a>
msgctxt "pi-tv-bu-vb-pc83:8.1"
msgid "Tena kho pana samayena rājā pasenadi kosalo uparipāsādavaragato hoti."
msgstr ""

#. <span class="var" hidden>rathikāya → rathiyāya (s1-3, pts1)</span>
msgctxt "pi-tv-bu-vb-pc83:8.2"
msgid "Addasā kho rājā pasenadi kosalo taṃ upāsakaṃ rathikāya chattapāṇiṃ gacchantaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:8.3"
msgid "Disvāna pakkosāpetvā etadavoca—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:8.4"
msgid "“tvaṃ kira, upāsaka, bahussuto āgatāgamo."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:8.5"
msgid "Sādhu, upāsaka, amhākaṃ itthāgāraṃ dhammaṃ vācehī”ti."
msgstr ""

#. <span class="var" hidden>Yamahaṃ → yampāhaṃ (bj)</span>
msgctxt "pi-tv-bu-vb-pc83:8.6"
msgid "“Yamahaṃ, deva, jānāmi ayyānaṃ vāhasā, ayyāva devassa itthāgāraṃ dhammaṃ vācessantī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:8.7"
msgid "Atha kho rājā pasenadi kosalo—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:8.8"
msgid "“saccaṃ kho upāsako āhā”ti yena bhagavā tenupasaṅkami;"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:8.9"
msgid "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:8.10"
msgid "Ekamantaṃ nisinno kho rājā pasenadi kosalo bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:8.11"
msgid "“sādhu, bhante, bhagavā ekaṃ bhikkhuṃ āṇāpetu yo amhākaṃ itthāgāraṃ dhammaṃ vācessatī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:8.12"
msgid "Atha kho bhagavā rājānaṃ pasenadiṃ kosalaṃ dhammiyā kathāya sandassesi … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:8.14"
msgid "padakkhiṇaṃ katvā pakkāmi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:8.15"
msgid "Atha kho bhagavā āyasmantaṃ ānandaṃ āmantesi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:8.16"
msgid "“tenahānanda, rañño itthāgāraṃ dhammaṃ vācehī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:8.17"
msgid "“Evaṃ, bhante”ti kho āyasmā ānando bhagavato paṭissutvā kālena kālaṃ pavisitvā rañño itthāgāraṃ dhammaṃ vāceti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:8.18"
msgid "Atha kho āyasmā ānando pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya yena rañño pasenadissa kosalassa nivesanaṃ tenupasaṅkami."
msgstr ""

#. </p><p><a class="sc" id="4"></a><a class="pts-vp-pi" id="pts-vp-pi4.159"></a>
msgctxt "pi-tv-bu-vb-pc83:9.1"
msgid "Tena kho pana samayena rājā pasenadi kosalo mallikāya deviyā saddhiṃ sayanagato hoti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:9.2"
msgid "Addasā kho mallikā devī āyasmantaṃ ānandaṃ dūratova āgacchantaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:9.3"
msgid "Disvāna sahasā vuṭṭhāsi;"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:9.4"
msgid "pītakamaṭṭhaṃ dussaṃ pabhassittha."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:9.5"
msgid "Atha kho āyasmā ānando tatova paṭinivattitvā ārāmaṃ gantvā bhikkhūnaṃ etamatthaṃ ārocesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:9.6"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:9.8"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:9.9"
msgid "“kathañhi nāma āyasmā ānando pubbe appaṭisaṃvidito rañño antepuraṃ pavisissatī”ti … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:9.11"
msgid "“saccaṃ kira tvaṃ, ānanda, pubbe appaṭisaṃvidito rañño antepuraṃ pavisasī”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:9.12"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:9.13"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:9.15"
msgid "kathañhi nāma tvaṃ, ānanda, pubbe appaṭisaṃvidito rañño antepuraṃ pavisissasi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:9.16"
msgid "Netaṃ, ānanda, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:9.18"
msgid "vigarahitvā … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:9.20"
msgid "dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

#. </p><p><a class="sc" id="5"></a>
msgctxt "pi-tv-bu-vb-pc83:10.1"
msgid "“Dasayime, bhikkhave, ādīnavā rājantepurappavesane."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:10.2"
msgid "Katame dasa?"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:10.3"
msgid "Idha, bhikkhave, rājā mahesiyā saddhiṃ nisinno hoti, tattha bhikkhu pavisati."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:10.4"
msgid "Mahesī vā bhikkhuṃ disvā sitaṃ pātukaroti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:10.5"
msgid "Bhikkhu vā mahesiṃ disvā sitaṃ pātukaroti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:10.6"
msgid "Tattha rañño evaṃ hoti—‘"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:10.7"
msgid "addhā imesaṃ kataṃ vā karissanti vā’ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:10.8"
msgid "Ayaṃ, bhikkhave, paṭhamo ādīnavo rājantepurappavesane."
msgstr ""

#. </p><p><a class="sc" id="6"></a>
msgctxt "pi-tv-bu-vb-pc83:11.1"
msgid "Puna caparaṃ, bhikkhave, rājā bahukicco bahukaraṇīyo."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:11.2"
msgid "Aññataraṃ itthiṃ gantvā nassarati."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:11.3"
msgid "Sā tena gabbhaṃ gaṇhi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:11.4"
msgid "Tattha rañño evaṃ hoti—‘"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:11.5"
msgid "na kho idha añño koci pavisati aññatra pabbajitena."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:11.6"
msgid "Siyā nu kho pabbajitassa kamman’ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:11.7"
msgid "Ayaṃ, bhikkhave, dutiyo ādīnavo rājantepurappavesane."
msgstr ""

#. </p><p><a class="sc" id="7"></a>
msgctxt "pi-tv-bu-vb-pc83:12.1"
msgid "Puna caparaṃ, bhikkhave, rañño antepure aññataraṃ ratanaṃ nassati."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:12.2"
msgid "Tattha rañño evaṃ hoti—‘"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:12.3"
msgid "na kho idha añño koci pavisati aññatra pabbajitena."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:12.4"
msgid "Siyā nu kho pabbajitassa kamman’ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:12.5"
msgid "Ayaṃ, bhikkhave, tatiyo ādīnavo rājantepurappavesane."
msgstr ""

#. </p><p><a class="sc" id="8"></a>
msgctxt "pi-tv-bu-vb-pc83:13.1"
msgid "Puna caparaṃ, bhikkhave, rañño antepure abbhantarā guyhamantā bahiddhā sambhedaṃ gacchanti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:13.2"
msgid "Tattha rañño evaṃ hoti—‘"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:13.3"
msgid "na kho idha añño koci pavisati aññatra pabbajitena."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:13.4"
msgid "Siyā nu kho pabbajitassa kamman’ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:13.5"
msgid "Ayaṃ, bhikkhave, catuttho ādīnavo rājantepurappavesane."
msgstr ""

#. </p><p><a class="sc" id="9"></a>
msgctxt "pi-tv-bu-vb-pc83:14.1"
msgid "Puna caparaṃ, bhikkhave, rañño antepure putto vā pitaraṃ pattheti pitā vā puttaṃ pattheti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:14.2"
msgid "Tesaṃ evaṃ hoti—‘"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:14.3"
msgid "na kho idha añño koci pavisati aññatra pabbajitena."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:14.4"
msgid "Siyā nu kho pabbajitassa kamman’ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:14.5"
msgid "Ayaṃ, bhikkhave, pañcamo ādīnavo rājantepurappavesane."
msgstr ""

#. </p><p><a class="sc" id="10"></a>
msgctxt "pi-tv-bu-vb-pc83:15.1"
msgid "Puna caparaṃ, bhikkhave, rājā nīcaṭṭhāniyaṃ ucce ṭhāne ṭhapeti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:15.2"
msgid "Yesaṃ taṃ amanāpaṃ tesaṃ evaṃ hoti—‘"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:15.3"
msgid "rājā kho pabbajitena saṃsaṭṭho."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:15.4"
msgid "Siyā nu kho pabbajitassa kamman’ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:15.5"
msgid "Ayaṃ, bhikkhave, chaṭṭho ādīnavo, rājantepurappavesane."
msgstr ""

#. </p><p><a class="sc" id="11"></a><a class="pts-vp-pi" id="pts-vp-pi4.160"></a>
msgctxt "pi-tv-bu-vb-pc83:16.1"
msgid "Puna caparaṃ, bhikkhave, rājā uccaṭṭhāniyaṃ nīce ṭhāne ṭhapeti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:16.2"
msgid "Yesaṃ taṃ amanāpaṃ tesaṃ evaṃ hoti—‘"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:16.3"
msgid "rājā kho pabbajitena saṃsaṭṭho."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:16.4"
msgid "Siyā nu kho pabbajitassa kamman’ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:16.5"
msgid "Ayaṃ, bhikkhave, sattamo ādīnavo rājantepurappavesane."
msgstr ""

#. </p><p><a class="sc" id="12"></a>
msgctxt "pi-tv-bu-vb-pc83:17.1"
msgid "Puna caparaṃ, bhikkhave, rājā akāle senaṃ uyyojeti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:17.2"
msgid "Yesaṃ taṃ amanāpaṃ tesaṃ evaṃ hoti—‘"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:17.3"
msgid "rājā kho pabbajitena saṃsaṭṭho."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:17.4"
msgid "Siyā nu kho pabbajitassa kamman’ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:17.5"
msgid "Ayaṃ, bhikkhave, aṭṭhamo ādīnavo rājantepurappavesane."
msgstr ""

#. </p><p><a class="sc" id="13"></a>
msgctxt "pi-tv-bu-vb-pc83:18.1"
msgid "Puna caparaṃ, bhikkhave, rājā kāle senaṃ uyyojetvā antarāmaggato nivattāpeti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:18.2"
msgid "Yesaṃ taṃ amanāpaṃ tesaṃ evaṃ hoti—‘"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:18.3"
msgid "rājā kho pabbajitena saṃsaṭṭho."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:18.4"
msgid "Siyā nu kho pabbajitassa kamman’ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:18.5"
msgid "Ayaṃ, bhikkhave, navamo ādīnavo rājantepurappavesane."
msgstr ""

#. </p><p><a class="sc" id="14"></a> <span class="var" hidden>rajanīyāni → rajaniyāni (s1-3) | rajjanīyāni (c1)</span>
msgctxt "pi-tv-bu-vb-pc83:19.1"
msgid "Puna caparaṃ, bhikkhave, rañño rājantepuraṃ hatthisammaddaṃ assasammaddaṃ rathasammaddaṃ rajanīyāni rūpasaddagandharasaphoṭṭhabbāni, yāni na pabbajitassa sāruppāni."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:19.2"
msgid "Ayaṃ, bhikkhave, dasamo ādīnavo rājantepurappavesane."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:19.3"
msgid "Ime kho, bhikkhave, dasa ādīnavā rājantepurappavesane”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:19.4"
msgid "Atha kho bhagavā āyasmantaṃ ānandaṃ anekapariyāyena vigarahitvā dubbharatāya … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc83:19.6"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. </p><p><a class="sc" id="15"></a>
#. <strong class="rule">
msgctxt "pi-tv-bu-vb-pc83:20.1"
msgid "“Yo pana bhikkhu rañño khattiyassa muddhāvasittassa anikkhantarājake aniggataratanake pubbe appaṭisaṃvidito indakhīlaṃ atikkāmeyya, pācittiyan”ti."
msgstr ""

#. </strong>
msgctxt "pi-tv-bu-vb-pc83:20.2"
msgid "(<em>83</em>:<strong>132</strong>)"
msgstr ""

#. </p><p><a class="sc" id="16"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc83:21.1"
msgid "Yo panāti"
msgstr ""

