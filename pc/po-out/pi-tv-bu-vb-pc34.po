msgid "34. Kāṇamātusikkhāpada"
msgstr ""

#. </h1></div><p><a class="sc" id="1"></a><a class="pts-vp-pi" id="pts-vp-pi4.79"></a>
msgctxt "pi-tv-bu-vb-pc34:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:6.2"
msgid "Tena kho pana samayena kāṇamātā upāsikā saddhā hoti pasannā."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:6.3"
msgid "Kāṇā gāmake aññatarassa purisassa dinnā hoti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:6.4"
msgid "Atha kho kāṇā mātugharaṃ agamāsi kenacideva karaṇīyena."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:6.5"
msgid "Atha kho kāṇāya sāmiko kāṇāya santike dūtaṃ pāhesi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:6.6"
msgid "“āgacchatu kāṇā, icchāmi kāṇāya āgatan”ti."
msgstr ""

#. <span class="var" hidden>pūvaṃ → pūpaṃ (ṇvādi­mog­gallāne)</span>
msgctxt "pi-tv-bu-vb-pc34:6.7"
msgid "Atha kho kāṇamātā upāsikā “kismiṃ viya rittahatthaṃ gantun”ti pūvaṃ paci."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:6.8"
msgid "Pakke pūve aññataro piṇḍacāriko bhikkhu kāṇamātāya upāsikāya nivesanaṃ pāvisi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:6.9"
msgid "Atha kho kāṇamātā upāsikā tassa bhikkhuno pūvaṃ dāpesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:6.10"
msgid "So nikkhamitvā aññassa ācikkhi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:6.11"
msgid "Tassapi pūvaṃ dāpesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:6.12"
msgid "So nikkhamitvā aññassa ācikkhi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:6.13"
msgid "Tassapi pūvaṃ dāpesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:6.14"
msgid "Yathāpaṭiyattaṃ pūvaṃ parikkhayaṃ agamāsi."
msgstr ""

#. </p><p><a class="sc" id="2"></a>
msgctxt "pi-tv-bu-vb-pc34:7.1"
msgid "Dutiyampi kho kāṇāya sāmiko kāṇāya santike dūtaṃ pāhesi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:7.2"
msgid "“āgacchatu kāṇā, icchāmi kāṇāya āgatan”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:7.3"
msgid "Dutiyampi kho kāṇamātā upāsikā “kismiṃ viya rittahatthaṃ gantun”ti pūvaṃ paci."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:7.4"
msgid "Pakke pūve aññataro piṇḍacāriko bhikkhu kāṇamātāya upāsikāya nivesanaṃ pāvisi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:7.5"
msgid "Atha kho kāṇamātā upāsikā tassa bhikkhuno pūvaṃ dāpesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:7.6"
msgid "So nikkhamitvā aññassa ācikkhi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:7.7"
msgid "Tassapi pūvaṃ dāpesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:7.8"
msgid "So nikkhamitvā aññassa ācikkhi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:7.9"
msgid "Tassapi pūvaṃ dāpesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:7.10"
msgid "Yathāpaṭiyattaṃ pūvaṃ parikkhayaṃ agamāsi."
msgstr ""

#. </p><p><a class="sc" id="3"></a>
msgctxt "pi-tv-bu-vb-pc34:8.1"
msgid "Tatiyampi kho kāṇāya sāmiko kāṇāya santike dūtaṃ pāhesi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:8.2"
msgid "“āgacchatu kāṇā, icchāmi kāṇāya āgataṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:8.3"
msgid "Sace kāṇā nāgacchissati, ahaṃ aññaṃ pajāpatiṃ ānessāmī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:8.4"
msgid "Tatiyampi kho kāṇamātā upāsikā kismiṃ viya rittahatthaṃ gantunti pūvaṃ paci."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:8.5"
msgid "Pakke pūve aññataro piṇḍacāriko bhikkhu kāṇamātāya upāsikāya nivesanaṃ pāvisi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:8.6"
msgid "Atha kho kāṇamātā upāsikā tassa bhikkhuno pūvaṃ dāpesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:8.7"
msgid "So nikkhamitvā aññassa ācikkhi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:8.8"
msgid "Tassapi pūvaṃ dāpesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:8.9"
msgid "So nikkhamitvā aññassa ācikkhi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:8.10"
msgid "Tassapi pūvaṃ dāpesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:8.11"
msgid "Yathāpaṭiyattaṃ pūvaṃ parikkhayaṃ agamāsi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:8.12"
msgid "Atha kho kāṇāya sāmiko aññaṃ pajāpatiṃ ānesi."
msgstr ""

#. </p><p><a class="sc" id="4"></a>
msgctxt "pi-tv-bu-vb-pc34:9.1"
msgid "Assosi kho kāṇā—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:9.2"
msgid "“tena kira purisena aññā pajāpati ānītā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:9.3"
msgid "Sā rodantī aṭṭhāsi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:9.4"
msgid "Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya yena kāṇamātāya upāsikāya nivesanaṃ tenupasaṅkami;"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:9.5"
msgid "upasaṅkamitvā paññatte āsane nisīdi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:9.6"
msgid "Atha kho kāṇamātā upāsikā yena bhagavā tenupasaṅkami;"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:9.7"
msgid "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:9.8"
msgid "Ekamantaṃ nisinnaṃ kho kāṇamātaraṃ upāsikaṃ bhagavā etadavoca—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:9.9"
msgid "“kissāyaṃ kāṇā rodatī”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:9.10"
msgid "Atha kho kāṇamātā upāsikā bhagavato etamatthaṃ ārocesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:9.11"
msgid "Atha kho bhagavā kāṇamātaraṃ upāsikaṃ dhammiyā kathāya sandassetvā samādapetvā samuttejetvā sampahaṃsetvā uṭṭhāyāsanā pakkāmi."
msgstr ""

#. </p><p><a class="sc" id="5"></a><a class="pts-vp-pi" id="pts-vp-pi4.80"></a>
msgctxt "pi-tv-bu-vb-pc34:10.1"
msgid "Tena kho pana samayena aññataro sattho rājagahā paṭiyālokaṃ gantukāmo hoti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:10.2"
msgid "Aññataro piṇḍacāriko bhikkhu taṃ satthaṃ piṇḍāya pāvisi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:10.3"
msgid "Aññataro upāsako tassa bhikkhuno sattuṃ dāpesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:10.4"
msgid "So nikkhamitvā aññassa ācikkhi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:10.5"
msgid "Tassapi sattuṃ dāpesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:10.6"
msgid "So nikkhamitvā aññassa ācikkhi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:10.7"
msgid "Tassapi sattuṃ dāpesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:10.8"
msgid "Yathāpaṭiyattaṃ pātheyyaṃ parikkhayaṃ agamāsi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:10.9"
msgid "Atha kho so upāsako te manusse etadavoca—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:10.10"
msgid "“ajjaṇho, ayyā, āgametha, yathāpaṭiyattaṃ pātheyyaṃ ayyānaṃ dinnaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:10.11"
msgid "Pātheyyaṃ paṭiyādessāmī”ti."
msgstr ""

#. <span class="var" hidden>Nāyyo → nāyya (bj, s1-3)</span>
msgctxt "pi-tv-bu-vb-pc34:10.12"
msgid "“Nāyyo sakkā āgametuṃ, payāto sattho”ti agamaṃsu."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:10.13"
msgid "Atha kho tassa upāsakassa pātheyyaṃ paṭiyādetvā pacchā gacchantassa corā acchindiṃsu."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:10.14"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:10.15"
msgid "“kathañhi nāma samaṇā sakyaputtiyā na mattaṃ jānitvā paṭiggahessanti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:10.16"
msgid "Ayaṃ imesaṃ datvā pacchā gacchanto corehi acchinno”ti."
msgstr ""

#. </p><p><a class="sc" id="6"></a>
msgctxt "pi-tv-bu-vb-pc34:11.1"
msgid "Assosuṃ kho bhikkhū tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:11.2"
msgid "Atha kho te bhikkhū bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:11.3"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:11.4"
msgid "“tena hi, bhikkhave, bhikkhūnaṃ sikkhāpadaṃ paññapessāmi dasa atthavase paṭicca—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:11.5"
msgid "saṃghasuṭṭhutāya, saṃghaphāsutāya … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:11.7"
msgid "vinayānuggahāya."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:11.8"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. </p><p><a class="sc" id="7"></a> <span class="var" hidden>uttari → uttariṃ (bj, s1-3) </span><span class="var" hidden>paṭiggaṇheyya → paṭigaṇheyya (pts1)</span>
msgctxt "pi-tv-bu-vb-pc34:12.1"
msgid "<strong class=\"rule\">“Bhikkhuṃ paneva kulaṃ upagataṃ pūvehi vā manthehi vā abhihaṭṭhuṃ pavāreyya, ākaṅkhamānena bhikkhunā dvattipattapūrā paṭiggahetabbā tato ce uttari paṭiggaṇheyya pācittiyaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:12.2"
msgid "Dvattipattapūre paṭiggahetvā tato nīharitvā bhikkhūhi saddhiṃ saṃvibhajitabbaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:12.3"
msgid "Ayaṃ tattha sāmīcī”</strong>ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:12.4"
msgid "(<em>34</em>:<strong>83</strong>)"
msgstr ""

#. </p><p><a class="sc" id="8"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc34:13.1"
msgid "Bhikkhuṃ paneva kulaṃ upagatanti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc34:13.1"
msgid "kulaṃ nāma cattāri kulāni—"
msgstr ""

#. </span>

msgctxt "pi-tv-bu-vb-pc34:13.2"
msgid "khattiyakulaṃ, brāhmaṇakulaṃ, vessakulaṃ, suddakulaṃ."
msgstr ""

#. </p><p><a class="sc" id="9"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc34:14.1"
msgid "Upagatanti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc34:14.1"
msgid "tattha gataṃ."
msgstr ""

#. </span>

#. </p><p><a class="sc" id="10"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc34:15.1"
msgid "Pūvaṃ nāma"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc34:15.1"
msgid "yaṃ kiñci paheṇakatthāya paṭiyattaṃ."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="11"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc34:16.1"
msgid "Manthaṃ nāma"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc34:16.1"
msgid "yaṃ kiñci pātheyyatthāya paṭiyattaṃ."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="12"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc34:17.1"
msgid "Abhihaṭṭhuṃ pavāreyyāti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc34:17.1"
msgid "yāvatakaṃ icchasi tāvatakaṃ gaṇhāhīti."
msgstr ""

#. </span>

#. </p><p><a class="sc" id="13"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc34:18.1"
msgid "Ākaṅkhamānenāti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc34:18.1"
msgid "icchamānena."
msgstr ""

#. </span>

#. </p><p><a class="sc" id="14"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc34:19.1"
msgid "Dvattipattapūrā paṭiggahetabbāti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc34:19.1"
msgid "dvetayo pattapūrā paṭiggahetabbā."
msgstr ""

#. </span>

#. </p><p><a class="sc" id="15"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc34:20.1"
msgid "Tato ce uttari paṭigaṇheyyāti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc34:20.1"
msgid "tatuttari paṭiggaṇhāti, āpatti pācittiyassa."
msgstr ""

#. </span>

#. </p><p><a class="sc" id="16"></a>
msgctxt "pi-tv-bu-vb-pc34:21.1"
msgid "<strong>Dvattipattapūre paṭiggahetvā</strong> tato nikkhamantena bhikkhuṃ passitvā ācikkhitabbaṃ—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:21.2"
msgid "“amutra mayā dvattipattapūrā paṭiggahitā, mā kho tattha paṭiggaṇhī”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:21.3"
msgid "Sace passitvā na ācikkhati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:21.4"
msgid "Sace ācikkhite paṭiggaṇhāti, āpatti dukkaṭassa."
msgstr ""

#. </p><p><a class="sc" id="17"></a><a class="pts-vp-pi" id="pts-vp-pi4.81"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc34:22.1"
msgid "Tato nīharitvā bhikkhūhi saddhiṃ saṃvibhajitabbanti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc34:22.1"
msgid "paṭikkamanaṃ nīharitvā saṃvibhajitabbaṃ."
msgstr ""

#. </span>

#. </p><p><a class="sc" id="18"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc34:23.1"
msgid "Ayaṃ tattha sāmīcīti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc34:23.1"
msgid "ayaṃ tattha anudhammatā."
msgstr ""

#. </span>

#. </p><p><a class="sc" id="19"></a>
msgctxt "pi-tv-bu-vb-pc34:24.1"
msgid "Atirekadvattipattapūre atirekasaññī paṭiggaṇhāti, āpatti pācittiyassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:24.2"
msgid "Atirekadvattipattapūre vematiko paṭiggaṇhāti, āpatti pācittiyassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:24.3"
msgid "Atirekadvattipattapūre ūnakasaññī paṭiggaṇhāti, āpatti pācittiyassa."
msgstr ""

#. </p><p><a class="sc" id="20"></a>
msgctxt "pi-tv-bu-vb-pc34:25.1"
msgid "Ūnakadvattipattapūre atirekasaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:25.2"
msgid "Ūnakadvattipattapūre vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:25.3"
msgid "Ūnakadvattipattapūre ūnakasaññī, anāpatti."
msgstr ""

#. </p><p><a class="sc" id="21"></a>
msgctxt "pi-tv-bu-vb-pc34:26.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc34:26.2"
msgid "dvattipattapūre paṭiggaṇhāti, ūnakadvattipattapūre paṭiggaṇhāti, na paheṇakatthāya na pātheyyatthāya paṭiyattaṃ denti, paheṇakatthāya vā pātheyyatthāya vā paṭiyattasesakaṃ denti, gamane paṭippassaddhe denti, ñātakānaṃ pavāritānaṃ, aññassatthāya, attano dhanena, ummattakassa, ādikammikassāti."
msgstr ""

#. </p><p class="endsutta"><a class="sc" id="22"></a>
msgctxt "pi-tv-bu-vb-pc34:27.1"
msgid "Kāṇamātusikkhāpadaṃ niṭṭhitaṃ catutthaṃ."
msgstr ""

