msgstr ""

#. </h1></div><p><a class="sc" id="1"></a><a class="pts-vp-pi" id="pts-vp-pi4.129"></a>
msgctxt "pi-tv-bu-vb-pc65:6.1"
msgid "Tena samayena buddho bhagavā rājagahe viharati veḷuvane kalandakanivāpe."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.2"
msgid "Tena kho pana samayena rājagahe sattarasavaggiyā dārakā sahāyakā honti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.3"
msgid "Upālidārako tesaṃ pāmokkho hoti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.4"
msgid "Atha kho upālissa mātāpitūnaṃ etadahosi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.5"
msgid "“kena nu kho upāyena upāli amhākaṃ accayena sukhañca jīveyya na ca kilameyyā”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.6"
msgid "Atha kho upālissa mātāpitūnaṃ etadahosi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.7"
msgid "“sace kho upāli lekhaṃ sikkheyya, evaṃ kho upāli amhākaṃ accayena sukhañca jīveyya, na ca kilameyyā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.8"
msgid "Atha kho upālissa mātāpitūnaṃ etadahosi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.9"
msgid "“sace kho upāli lekhaṃ sikkhissati, aṅguliyo dukkhā bhavissanti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.10"
msgid "Sace kho upāli gaṇanaṃ sikkheyya, evaṃ kho upāli amhākaṃ accayena sukhañca jīveyya na ca kilameyyā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.11"
msgid "Atha kho upālissa mātāpitūnaṃ etadahosi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.12"
msgid "“sace kho upāli gaṇanaṃ sikkhissati, urassa dukkho bhavissati."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.13"
msgid "Sace kho upāli rūpaṃ sikkheyya, evaṃ kho upāli amhākaṃ accayena sukhañca jīveyya na ca kilameyyā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.14"
msgid "Atha kho upālissa mātāpitūnaṃ etadahosi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.15"
msgid "“sace kho upāli rūpaṃ sikkhissati, akkhīni dukkhā bhavissanti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.16"
msgid "Ime kho samaṇā sakyaputtiyā sukhasīlā sukhasamācārā subhojanāni bhuñjitvā nivātesu sayanesu sayanti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:6.17"
msgid "Sace kho upāli samaṇesu sakyaputtiyesu pabbajeyya, evaṃ kho upāli amhākaṃ accayena sukhañca jīveyya, na ca kilameyyā”ti."
msgstr ""

#. </p><p><a class="sc" id="2"></a>
msgctxt "pi-tv-bu-vb-pc65:7.1"
msgid "Assosi kho upālidārako mātāpitūnaṃ imaṃ kathāsallāpaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.2"
msgid "Atha kho upālidārako yena te dārakā tenupasaṅkami;"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.3"
msgid "upasaṅkamitvā te dārake etadavoca—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.4"
msgid "“etha mayaṃ, ayyā, samaṇesu sakyaputtiyesu pabbajissāmā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.5"
msgid "“Sace kho tvaṃ, ayya, pabbajissasi, evaṃ mayampi pabbajissāmā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.6"
msgid "Atha kho te dārakā ekamekassa mātāpitaro upasaṅkamitvā etadavocuṃ—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.7"
msgid "“anujānātha maṃ agārasmā anagāriyaṃ pabbajjāyā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.8"
msgid "Atha kho tesaṃ dārakānaṃ mātāpitaro—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.9"
msgid "“sabbepime dārakā samānacchandā kalyāṇādhippāyā”ti anujāniṃsu."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.10"
msgid "Te bhikkhū upasaṅkamitvā pabbajjaṃ yāciṃsu."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.11"
msgid "Te bhikkhū pabbājesuṃ upasampādesuṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.12"
msgid "Te rattiyā paccūsasamayaṃ paccuṭṭhāya rodanti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.13"
msgid "“yāguṃ detha, bhattaṃ detha, khādanīyaṃ dethā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.14"
msgid "Bhikkhū evamāhaṃsu—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.15"
msgid "“āgametha, āvuso, yāva ratti vibhāyati."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.16"
msgid "Sace yāgu bhavissati, pivissatha."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.17"
msgid "Sace bhattaṃ bhavissati, bhuñjissatha."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.18"
msgid "Sace khādanīyaṃ bhavissati, khādissatha."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.19"
msgid "No ce bhavissati yāgu vā bhattaṃ vā khādanīyaṃ vā, piṇḍāya caritvā bhuñjissathā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.20"
msgid "Evampi kho te bhikkhū bhikkhūhi vuccamānā rodantiyeva—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.21"
msgid "“yāguṃ detha, bhattaṃ detha, khādanīyaṃ dethā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:7.22"
msgid "Senāsanaṃ ūhadantipi ummihantipi."
msgstr ""

#. </p><p><a class="sc" id="3"></a><a class="pts-vp-pi" id="pts-vp-pi4.130"></a>
msgctxt "pi-tv-bu-vb-pc65:8.1"
msgid "Assosi kho bhagavā rattiyā paccūsasamayaṃ paccuṭṭhāya dārakasaddaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:8.2"
msgid "Sutvāna āyasmantaṃ ānandaṃ āmantesi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:8.3"
msgid "“kiṃ nu kho so, ānanda, dārakasaddo”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:8.4"
msgid "Atha kho āyasmā ānando bhagavato etamatthaṃ ārocesi."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:8.5"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe bhikkhusaṃghaṃ sannipātāpetvā bhikkhū paṭipucchi—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:8.6"
msgid "“saccaṃ kira, bhikkhave, bhikkhū jānaṃ ūnavīsativassaṃ puggalaṃ upasampādentī”ti?"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:8.7"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:8.8"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:8.10"
msgid "kathañhi nāma te, bhikkhave, moghapurisā jānaṃ ūnavīsativassaṃ puggalaṃ upasampādessanti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:8.11"
msgid "Ūnakavīsativasso, bhikkhave, puggalo akkhamo hoti sītassa uṇhassa jighacchāya pipāsāya ḍaṃsamakasavātātapasarīsapasamphassānaṃ duruttānaṃ durāgatānaṃ vacanapathānaṃ uppannānaṃ sārīrikānaṃ vedanānaṃ dukkhānaṃ tibbānaṃ kharānaṃ kaṭukānaṃ asātānaṃ amanāpānaṃ pāṇaharānaṃ anadhivāsakajātiko hoti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:8.12"
msgid "Vīsativassova kho, bhikkhave, puggalo khamo hoti sītassa uṇhassa … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:8.14"
msgid "pāṇaharānaṃ adhivāsakajātiko hoti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:8.15"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:8.17"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. </p><p><a class="sc" id="4"></a>
#. <strong class="rule">
msgctxt "pi-tv-bu-vb-pc65:9.1"
msgid "“Yo pana bhikkhu jānaṃ ūnavīsativassaṃ puggalaṃ upasampādeyya, so ca puggalo anupasampanno</strong>, <strong>te ca bhikkhū gārayhā, idaṃ tasmiṃ pācittiyan”ti."
msgstr ""

#. </strong>
msgctxt "pi-tv-bu-vb-pc65:9.2"
msgid "(<em>65</em>:<strong>114</strong>)"
msgstr ""

#. </p><p><a class="sc" id="5"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc65:10.1"
msgid "Yo panāti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc65:10.1"
msgid "yo yādiso … pe …"
msgstr ""

#. </span>

#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc65:10.3"
msgid "bhikkhūti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc65:10.3"
msgid "… pe …"
msgstr ""

#. </span>

msgctxt "pi-tv-bu-vb-pc65:10.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. </p><p><a class="sc" id="6"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc65:11.1"
msgid "Jānāti nāma"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc65:11.1"
msgid "sāmaṃ vā jānāti, aññe vā tassa ārocenti, so vā āroceti."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="7"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-pc65:12.1"
msgid "Ūnavīsativasso nāma"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-pc65:12.1"
msgid "appattavīsativasso."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="8"></a> <span class="var" hidden>sammannati → sammanati (mr)</span>
msgctxt "pi-tv-bu-vb-pc65:13.1"
msgid "“Upasampādessāmī”ti gaṇaṃ vā ācariyaṃ vā pattaṃ vā cīvaraṃ vā pariyesati, sīmaṃ vā sammannati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:13.2"
msgid "Ñattiyā dukkaṭaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:13.3"
msgid "Dvīhi kammavācāhi dukkaṭā."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:13.4"
msgid "Kammavācāpariyosāne upajjhāyassa āpatti pācittiyassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:13.5"
msgid "Gaṇassa ca ācariyassa ca āpatti dukkaṭassa."
msgstr ""

#. </p><p><a class="sc" id="9"></a>
msgctxt "pi-tv-bu-vb-pc65:14.1"
msgid "Ūnavīsativasse ūnavīsativassasaññī upasampādeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:14.2"
msgid "Ūnavīsativasse vematiko upasampādeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:14.3"
msgid "Ūnavīsativasse paripuṇṇavīsativassasaññī upasampādeti, anāpatti."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:14.4"
msgid "Paripuṇṇavīsativasse ūnavīsativassasaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:14.5"
msgid "Paripuṇṇavīsativasse vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:14.6"
msgid "Paripuṇṇavīsativasse paripuṇṇavīsativassasaññī, anāpatti."
msgstr ""

#. </p><p><a class="sc" id="10"></a>
msgctxt "pi-tv-bu-vb-pc65:15.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pi-tv-bu-vb-pc65:15.2"
msgid "ūnavīsativassaṃ paripuṇṇavīsativassasaññī upasampādeti, paripuṇṇavīsativassaṃ paripuṇṇavīsativassasaññī upasampādeti, ummattakassa, ādikammikassāti."
msgstr ""

#. </p><p class="endsutta"><a class="sc" id="11"></a>
msgctxt "pi-tv-bu-vb-pc65:16.1"
msgid "Ūnavīsativassasikkhāpadaṃ niṭṭhitaṃ pañcamaṃ."
msgstr ""

