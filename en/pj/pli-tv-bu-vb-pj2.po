msgctxt "pli-tv-bu-vb-pj2:152.9"
msgid "“kiṃcitto tvaṃ, bhikkhū”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pj2:152.10"
msgid "“Nāhaṃ, bhagavā, jānāmī”ti."
msgstr ""

