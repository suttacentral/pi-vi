msgid "so ca taṃ paṭijānāti, nisajjāya kāretabbo … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:26.4"
msgid "“nāhaṃ nisinno, api ca kho nipanno”ti,"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:26.5"
msgid "nipajjāya kāretabbo … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:26.6"
msgid "“nāhaṃ nisinno, api ca kho ṭhito”ti,"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:26.7"
msgid "na kāretabbo."
msgstr ""

#. </p><p><a class="sc" id="23"></a><a class="ms-pa" id="ms-pa1851"></a>
msgctxt "pi-tv-bu-vb-ay2:27.1"
msgid "Sā ce evaṃ vadeyya—"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:27.2"
msgid "“ayyo mayā diṭṭho mātugāmena saddhiṃ eko ekāya raho nipanno”ti,"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:27.3"
msgid "so ca taṃ paṭijānāti, nipajjāya kāretabbo … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:27.4"
msgid "nāhaṃ nipanno, api ca kho nisinnoti,"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:27.5"
msgid "nisajjāya kāretabbo … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:27.6"
msgid "nāhaṃ nipanno, api ca kho ṭhitoti,"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:27.7"
msgid "na kāretabbo."
msgstr ""

#. </p></div><p><a class="sc" id="24"></a><a class="ms-pa" id="ms-pa1852"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ay2:28.1"
msgid "Ayampīti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ay2:28.2"
msgid "purimaṃ upādāya vuccati."
msgstr ""

#. </span></p><p><a class="sc" id="25"></a><a class="ms-pa" id="ms-
#. pa1853"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ay2:29.1"
msgid "Aniyatoti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ay2:29.2"
msgid "na niyato,"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:29.3"
msgid "saṃghādiseso vā pācittiyaṃ vā."
msgstr ""

#. </span>
#. </p><h2>
msgctxt "pi-tv-bu-vb-ay2:30.1"
msgid ""
msgstr ""

#. </h2><p><a class="sc" id="26"></a><a class="pts-cs" id="bu-an.2.3"></a><a
#. class="ms-pa" id="ms-pa1854"></a>
msgctxt "pi-tv-bu-vb-ay2:30.2"
msgid "Gamanaṃ paṭijānāti nisajjaṃ paṭijānāti āpattiṃ paṭijānāti, āpattiyā kāretabbo."
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:30.3"
msgid "Gamanaṃ paṭijānāti nisajjaṃ na paṭijānāti āpattiṃ paṭijānāti, āpattiyā kāretabbo."
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:30.4"
msgid "Gamanaṃ paṭijānāti nisajjaṃ paṭijānāti āpattiṃ na paṭijānāti, nisajjāya kāretabbo."
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:30.5"
msgid "Gamanaṃ paṭijānāti nisajjaṃ na paṭijānāti āpattiṃ na paṭijānāti, na kāretabbo."
msgstr ""

#. </p><p><a class="sc" id="27"></a><a class="ms-pa" id="ms-pa1855"></a>
msgctxt "pi-tv-bu-vb-ay2:31.1"
msgid "Gamanaṃ na paṭijānāti nisajjaṃ paṭijānāti āpattiṃ paṭijānāti, āpattiyā kāretabbo."
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:31.2"
msgid "Gamanaṃ na paṭijānāti nisajjaṃ na paṭijānāti āpattiṃ paṭijānāti, āpattiyā kāretabbo."
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:31.3"
msgid "Gamanaṃ na paṭijānāti nisajjaṃ paṭijānāti āpattiṃ na paṭijānāti, nisajjāya kāretabbo."
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:31.4"
msgid "Gamanaṃ na paṭijānāti nisajjaṃ na paṭijānāti āpattiṃ na paṭijānāti, na kāretabboti."
msgstr ""

#. </p><hr><p class="endsutta"><a class="sc" id="28"></a><a class="ms-pa"
#. id="ms-pa1856"></a>
msgctxt "pi-tv-bu-vb-ay2:32.1"
msgid "Dutiyo aniyato niṭṭhito."
msgstr ""

#. </p><p><a class="sc" id="29"></a><a class="pts-vp-pi" id="pts-vp-
#. pi3.194"></a><a class="pts-vp-en" id="bd.1.340"></a> <a class="ms-pa"
#. id="ms-pa1857"></a>
msgctxt "pi-tv-bu-vb-ay2:33.1"
msgid "Uddiṭṭhā kho āyasmanto dve aniyatā dhammā."
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:33.2"
msgid "Tatthāyasmante pucchāmi—"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:33.3"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:33.4"
msgid "Dutiyampi pucchāmi—"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:33.5"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:33.6"
msgid "Tatiyampi pucchāmi—"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:33.7"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:33.8"
msgid "Parisuddhetthāyasmanto;"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:33.9"
msgid "tasmā tuṇhī,"
msgstr ""

msgctxt "pi-tv-bu-vb-ay2:33.10"
msgid "evametaṃ dhārayāmīti."
msgstr ""

#. </p><p class="endsection summary"><a class="sc" id="30"></a><a class="ms-
#. pa" id="ms-pa1858"></a>
msgctxt "pi-tv-bu-vb-ay2:34.1"
msgid "Tassuddānaṃ"
msgstr ""

#. </p><div class="uddana"><p><a class="sc" id="31"></a><a class="ms-pa"
#. id="ms-pa1859"></a>
msgctxt "pi-tv-bu-vb-ay2:35.1"
msgid "Alaṃ kammaniyañceva,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-ay2:35.2"
msgid "tatheva ca naheva kho;"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-ay2:35.3"
msgid "Aniyatā supaññattā,"
msgstr ""

#. <br>
msgctxt "pi-tv-bu-vb-ay2:35.4"
msgid "buddhaseṭṭhena tādināti."
msgstr ""

#. </p></div><p class="endsection"><a class="sc" id="32"></a><a class="ms-pa"
#. id="ms-pa1860"></a>
msgctxt "pi-tv-bu-vb-ay2:36.1"
msgid "Aniyatakaṇḍaṃ niṭṭhitaṃ."
msgstr ""

