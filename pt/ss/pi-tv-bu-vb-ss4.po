#. </h1></div><h2>
msgctxt "pi-tv-bu-vb-ss4:5.1"
msgid ""
msgstr ""

#. </h2><p><a class="sc" id="1"></a><a class="pts-vp-pi" id="pts-vp-
#. pi3.132"></a><a class="pts-vp-en" id="bd.1.222"></a><a class="pts-cs-empty"
#. id="bu-ss.4.1"></a><a class="pts-cs" id="bu-ss.4.1.1"></a><a class="ms-pa"
#. id="ms-pa1180"></a>
msgctxt "pi-tv-bu-vb-ss4:5.2"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anātha­piṇḍi­kassa ārāme."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:5.3"
msgid "Tena kho pana samayena āyasmā udāyī sāvatthiyaṃ kulūpako hoti, bahukāni kulāni upasaṅkamati."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:5.4"
msgid "Tena kho pana samayena aññatarā itthī matapatikā abhirūpā hoti dassanīyā pāsādikā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:5.5"
msgid "Atha kho āyasmā udāyī pubbaṇ­ha­samayaṃ nivāsetvā patta­cīvara­mādāya yena tassā itthiyā nivesanaṃ tenupasaṅkami;"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:5.6"
msgid "upasaṅkamitvā paññatte āsane nisīdi."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:5.7"
msgid "Atha kho sā itthī yenāyasmā udāyī tenupasaṅkami;"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:5.8"
msgid "upasaṅkamitvā āyasmantaṃ udāyiṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:5.9"
msgid "Ekamantaṃ nisinnaṃ kho taṃ itthiṃ āyasmā udāyī dhammiyā kathāya sandassesi samādapesi samuttejesi sampahaṃsesi."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:5.10"
msgid "Atha kho sā itthī āyasmatā udāyinā dhammiyā kathāya sandassitā samādapitā samuttejitā sampahaṃsitā āyasmantaṃ udāyiṃ etadavoca—"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:5.11"
msgid "“vadeyyātha, bhante, yena attho."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:5.12"
msgid "Paṭibalā mayaṃ ayyassa dātuṃ yadidaṃ cīvara­piṇḍa­pāta­se­nāsa­na­gilā­nappac­caya­bhesaj­ja­parik­khā­ran”ti."
msgstr ""

#. </p><p><a class="sc" id="2"></a><a class="ms-pa" id="ms-pa1181"></a>
msgctxt "pi-tv-bu-vb-ss4:6.1"
msgid "“Na kho te, bhagini, amhākaṃ dullabhā yadidaṃ cīvara­piṇḍa­pāta­se­nāsa­na­gilā­nappac­caya­bhesaj­ja­parik­khārā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:6.2"
msgid "Api ca yo amhākaṃ dullabho taṃ dehī”ti."
msgstr ""

#. </p><p>
msgctxt "pi-tv-bu-vb-ss4:6.3"
msgid "“Kiṃ, bhante”ti?"
msgstr ""

#. </p><p>
msgctxt "pi-tv-bu-vb-ss4:6.4"
msgid "“Methunadhamman”ti."
msgstr ""

#. </p><p>
msgctxt "pi-tv-bu-vb-ss4:6.5"
msgid "“Attho, bhante”ti?"
msgstr ""

#. </p><p>
msgctxt "pi-tv-bu-vb-ss4:6.6"
msgid "“Attho, bhaginī”ti."
msgstr ""

#. </p><p><a class="pts-vp-en" id="bd.1.223"></a>
msgctxt "pi-tv-bu-vb-ss4:6.7"
msgid "“Ehi, bhante”ti,"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:6.8"
msgid "ovarakaṃ pavisitvā sāṭakaṃ nikkhipitvā mañcake uttānā nipajji."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:6.9"
msgid "Atha kho āyasmā udāyī yena sā itthī tenupasaṅkami; upasaṅkamitvā—"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:6.10"
msgid "“ko imaṃ vasalaṃ duggandhaṃ āmasissatī”ti,"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:6.11"
msgid "niṭṭhubhitvā pakkāmi."
msgstr ""

#. </p><p><a class="sc" id="3"></a><a class="ms-pa" id="ms-pa1182"></a>
msgctxt "pi-tv-bu-vb-ss4:7.1"
msgid "Atha kho sā itthī ujjhāyati khiyyati vipāceti—"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:7.2"
msgid "“alajjino ime samaṇā sakyaputtiyā dussīlā musāvādino."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:7.3"
msgid "Ime hi nāma dhammacārino samacārino brahmacārino saccavādino sīlavanto kalyāṇadhammā paṭijānissanti."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:7.4"
msgid "Natthi imesaṃ sāmaññaṃ natthi imesaṃ brahmaññaṃ, naṭṭhaṃ imesaṃ sāmaññaṃ naṭṭhaṃ imesaṃ brahmaññaṃ, kuto imesaṃ sāmaññaṃ kuto imesaṃ brahmaññaṃ,"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:7.5"
msgid "apagatā ime sāmaññā apagatā ime brahmaññā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:7.6"
msgid "Kathañhi nāma samaṇo udāyī maṃ sāmaṃ methunadhammaṃ yācitvā, ‘ko imaṃ vasalaṃ duggandhaṃ āmasissatī’ti niṭṭhubhitvā pakkamissati."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:7.7"
msgid "Kiṃ me pāpakaṃ kiṃ me duggandhaṃ,"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:7.8"
msgid "kassāhaṃ kena hāyāmī”ti?"
msgstr ""

#. </p><p><a class="sc" id="4"></a><a class="ms-pa" id="ms-pa1183"></a><a
#. class="pts-cs" id="bu-ss.4.1.2"></a><a class="ms-pa" id="ms-pa1184"></a>
msgctxt "pi-tv-bu-vb-ss4:8.1"
msgid "Aññāpi itthiyo ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:8.2"
msgid "“alajjino ime samaṇā sakyaputtiyā dussīlā musāvādino … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:8.3"
msgid "kathañhi nāma samaṇo udāyī imissā sāmaṃ methunadhammaṃ yācitvā, ‘ko imaṃ vasalaṃ duggandhaṃ āmasissatī’ti niṭṭhubhitvā pakkamissati."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:8.4"
msgid "Kiṃ imissā pāpakaṃ kiṃ imissā duggandhaṃ, kassāyaṃ kena hāyatī”ti?"
msgstr ""

#. </p><p><a class="sc" id="5"></a>
msgctxt "pi-tv-bu-vb-ss4:9.1"
msgid "Assosuṃ kho bhikkhū tāsaṃ itthīnaṃ ujjhāyantīnaṃ khiyyantīnaṃ vipācentīnaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:9.2"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

#. <a class="pts-vp-en" id="bd.1.224"></a>
msgctxt "pi-tv-bu-vb-ss4:9.3"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:9.4"
msgid "“kathañhi nāma āyasmā udāyī mātugāmassa santike attakā­ma­pāri­cari­yāya vaṇṇaṃ bhāsissatī”ti."
msgstr ""

#. </p><p><a class="sc" id="6"></a><a class="pts-vp-pi" id="pts-vp-
#. pi3.133"></a><a class="ms-pa" id="ms-pa1185"></a>
msgctxt "pi-tv-bu-vb-ss4:10.1"
msgid "Atha kho te bhikkhū āyasmantaṃ udāyiṃ aneka­pariyā­yena vigarahitvā bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:10.2"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe bhikkhusaṃghaṃ sannipātāpetvā āyasmantaṃ udāyiṃ paṭipucchi—"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:10.3"
msgid "“saccaṃ kira tvaṃ, udāyi, mātugāmassa santike attakā­ma­pāri­cari­yāya vaṇṇaṃ bhāsasī”ti?"
msgstr ""

#. </p><p>
msgctxt "pi-tv-bu-vb-ss4:10.4"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

#. </p><p>
msgctxt "pi-tv-bu-vb-ss4:10.5"
msgid "Vigarahi buddho bhagavā—"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:10.6"
msgid "“ananucchavikaṃ, moghapurisa, ananulomikaṃ appatirūpaṃ assāmaṇakaṃ akappiyaṃ akaraṇīyaṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:10.7"
msgid "Kathañhi nāma tvaṃ, moghapurisa, mātugāmassa santike attakā­ma­pāri­cari­yāya vaṇṇaṃ bhāsissasi."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:10.8"
msgid "Nanu mayā, moghapurisa, aneka­pariyā­yena virāgāya dhammo desito no sarāgāya … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:10.9"
msgid "kāma­pari­ḷāhā­naṃ vūpasamo akkhāto?"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:10.10"
msgid "Netaṃ, moghapurisa, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:10.11"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. </p><h2>
msgctxt "pi-tv-bu-vb-ss4:11.1"
msgid ""
msgstr ""

#. </h2><p><a class="sc" id="7"></a><a class="ms-pa" id="ms-pa1186"></a>
#. <strong class="rule">
msgctxt "pi-tv-bu-vb-ss4:11.2"
msgid "“Yo pana bhikkhu otiṇṇo vipariṇatena cittena mātugāmassa santike attakā­ma­pāri­cari­yāya vaṇṇaṃ bhāseyya—"
msgstr ""

#. <a class="pts-vp-en" id="bd.1.225"></a>
msgctxt "pi-tv-bu-vb-ss4:11.3"
msgid "‘etadaggaṃ, bhagini, pāricariyānaṃ yā mādisaṃ sīlavantaṃ kalyāṇadhammaṃ brahmacāriṃ etena dhammena paricareyyāti methunu­pasaṃ­hi­tena’, saṃghādiseso”ti."
msgstr ""

#. </strong>
msgctxt "pi-tv-bu-vb-ss4:11.4"
msgid "(<em>4</em>:<strong>8</strong>)"
msgstr ""

#. </p><h2>
msgctxt "pi-tv-bu-vb-ss4:12.1"
msgid ""
msgstr ""

#. </h2><p><a class="sc" id="8"></a><a class="pts-cs" id="bu-ss.4.2"></a><a
#. class="ms-pa" id="ms-pa1187"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:12.2"
msgid "Yo panāti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:12.3"
msgid "yo yādiso … pe …"
msgstr ""

#. </span>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:12.4"
msgid "bhikkhūti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:12.5"
msgid "… pe …"
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:12.6"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="9"></a><a class="ms-pa" id="ms-pa1188"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:13.1"
msgid "Otiṇṇo nāma"
msgstr ""

#. </strong><span class="note" hidden>I have rendered <i lang="pi">otiṇṇo
#. vipariṇatena cittena</i> with the single word “lustful.” This means that
#. the definition for <i lang="pi">vipariṇataṃ</i> is missing from my
#. translation. Here is the Pali, followed by a translation: <i
#. lang="pi">Vipariṇatanti rattampi cittaṃ vipariṇataṃ. Duṭṭhampi cittaṃ
#. vipariṇataṃ. Mūḷhampi cittaṃ vipariṇataṃ. Api ca rattaṃ cittaṃ imasmiṃ
#. atthe adhippetaṃ vipariṇatanti</i>; “distorted: a mind with desire is
#. distorted, a mind with anger is distorted, a confused mind is distorted.
#. But in this case ‘distorted’ refers to a mind with desire.”</span><span
#. class="gloss">
msgctxt "pi-tv-bu-vb-ss4:13.2"
msgid "sāratto apekkhavā paṭi­baddha­citto."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="10"></a><a class="ms-pa" id="ms-pa1189"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:14.1"
msgid "Vipariṇatanti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:14.2"
msgid "rattampi cittaṃ vipariṇataṃ, duṭṭhampi cittaṃ vipariṇataṃ, mūḷhampi cittaṃ vipariṇataṃ."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:14.3"
msgid "Api ca rattaṃ cittaṃ imasmiṃ atthe adhippetaṃ vipariṇatanti."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="11"></a><a class="ms-pa" id="ms-pa1190"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:15.1"
msgid "Mātugāmo nāma"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:15.2"
msgid "manussitthī, na yakkhī, na petī, na tiracchānagatā."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:15.3"
msgid "Viññū paṭibalā subhā­sita­dub­bhāsi­taṃ duṭṭhul­lā­duṭṭhul­laṃ ājānituṃ."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="12"></a><a class="ms-pa" id="ms-pa1191"></a>
#. <span class="note" hidden>I have rendered <i lang="pi">mātugāmassa
#. santike</i>, “in the presence of a woman,” simply as “woman.” Since woman
#. has already been defined above, this definition falls away in my
#. translation. Here is the Pali of the missing part, followed by a
#. translation: <i lang="pi">Mātugāmassa santiketi mātugāmassa sāmantā,
#. mātugāmassa avidūre.</i>; “in the presence of a woman: near a woman, close
#. to a woman.”</span>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:16.1"
msgid "Mātugāmassa santiketi"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:16.2"
msgid "mātugāmassa sāmantā, mātugāmassa avidūre."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="13"></a><a class="ms-pa" id="ms-pa1192"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:17.1"
msgid "Attakāmanti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:17.2"
msgid "attano kāmaṃ attano hetuṃ attano adhippāyaṃ attano pāricariyaṃ."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="14"></a><a class="ms-pa" id="ms-pa1193"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:18.1"
msgid "Etadagganti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:18.2"
msgid "etaṃ aggaṃ etaṃ seṭṭhaṃ etaṃ mokkhaṃ etaṃ uttamaṃ etaṃ pavaraṃ."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="15"></a><a class="ms-pa" id="ms-pa1194"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:19.1"
msgid "Yāti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:19.2"
msgid "khattiyī vā brāhmaṇī vā vessī vā suddī vā."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="16"></a><a class="ms-pa" id="ms-pa1195"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:20.1"
msgid "Mādisanti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:20.2"
msgid "khattiyaṃ vā brāhmaṇaṃ vā vessaṃ vā suddaṃ vā."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="17"></a><a class="ms-pa" id="ms-pa1196"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:21.1"
msgid "Sīlavantanti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:21.2"
msgid "pāṇātipātā paṭivirataṃ, adinnādānā paṭivirataṃ, musāvādā paṭivirataṃ."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="18"></a><a class="ms-pa" id="ms-pa1197"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:22.1"
msgid "Brahmacārinti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:22.2"
msgid "methunadhammā paṭivirataṃ."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="19"></a><a class="ms-pa" id="ms-pa1198"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:23.1"
msgid "Kalyāṇadhammo nāma"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:23.2"
msgid "tena ca sīlena tena ca brahmacariyena kalyāṇadhammo hoti."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="20"></a><a class="ms-pa" id="ms-pa1199"></a><a
#. class="pts-vp-en" id="bd.1.226"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:24.1"
msgid "Etena dhammenāti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:24.2"
msgid "methuna­dham­mena."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="21"></a><a class="ms-pa" id="ms-pa1200"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:25.1"
msgid "Paricareyyāti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:25.2"
msgid "abhirameyya."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="22"></a><a class="ms-pa" id="ms-pa1201"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:26.1"
msgid "Methunu­pasaṃ­hi­tenāti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:26.2"
msgid "methuna­dhammap­paṭi­saṃ­yuttena."
msgstr ""

#. </span>
#. </p><p><a class="sc" id="23"></a><a class="ms-pa" id="ms-pa1202"></a>
#. <strong class="term">
msgctxt "pi-tv-bu-vb-ss4:27.1"
msgid "Saṃghādisesoti"
msgstr ""

#. </strong><span class="gloss">
msgctxt "pi-tv-bu-vb-ss4:27.2"
msgid "… pe … tenapi vuccati “saṃghādiseso”ti."
msgstr ""

#. </span>
#. </p><h2>
msgctxt "pi-tv-bu-vb-ss4:28.1"
msgid ""
msgstr ""

#. </h2><p><a class="sc" id="24"></a><a class="pts-vp-pi" id="pts-vp-
#. pi3.134"></a><a class="pts-cs-empty" id="bu-ss.4.3"></a><a class="pts-cs"
#. id="bu-ss.4.3.1"></a><a class="ms-pa" id="ms-pa1203"></a>
msgctxt "pi-tv-bu-vb-ss4:28.2"
msgid "Itthī ca hoti itthisaññī sāratto ca."
msgstr ""

msgctxt "pi-tv-bu-vb-ss4:28.3"
